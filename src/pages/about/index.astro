---
/**
 * ABOUT — Company Landing Page
 * Origin story, timeline, values, collections, leadership, channels.
 * All content from about.mdx — complete integration with 20 sections.
 */
import BaseLayout from "../../layouts/BaseLayout.astro";
import Head from "../../components/Head.astro";
import Breadcrumb from "../../components/Breadcrumb.astro";
import Hero from "../../components/Hero.astro";
import SectionHeader from "../../components/SectionHeader.astro";
import GoldTopCard from "../../components/GoldTopCard.astro";
import TrustMarquee from "../../components/TrustMarquee.astro";
import OriginMetadata from "../../components/OriginMetadata.astro";
import BotanicalSection from "../../components/BotanicalSection.astro";
import SplitEditorial from "../../components/SplitEditorial.astro";
import PullQuote from "../../components/PullQuote.astro";
import GlassCard from "../../components/GlassCard.astro";
import LeadershipCard from "../../components/LeadershipCard.astro";
import ChannelSplit from "../../components/ChannelSplit.astro";
import SloganBanner from "../../components/SloganBanner.astro";
import AccordionItem from "../../components/AccordionItem.astro";
import AccordionGroup from "../../components/AccordionGroup.astro";
import FeatureList from "../../components/FeatureList.astro";
import DualCTASection from "../../components/DualCTASection.astro";
import ImpactBarIsland from "../../components/islands/ImpactBarIsland.tsx";
import { getEntry } from "astro:content";

const page = await getEntry("pages", "about");
if (!page) throw new Error("Missing content: pages/about");
const { data } = page;

const R2_ABOUT = "https://cdn.forestal-mt.com/pages/about";

/* ── Data arrays ── */

const timeline = [
  {
    year: "1990s",
    title: "Origins in Stewardship",
    description:
      "Nery Roberto Murillo Montalvan enters the lumber industry with a long-term vision. Over the decade, he acquires and cares for more than 5,000 hectares of woodland in Olancho — treated as a generational responsibility.",
  },
  {
    year: "2009",
    title: "Formal Foundation",
    description:
      "Stewardship becomes institutional with the creation of Forestal Murillo Tejada S. de R.L. Operations center on responsible timber extraction, pine resin production, and regeneration-focused forest management.",
  },
  {
    year: "2018",
    title: "A Turning Point in La Mosquitia",
    description:
      "While working with Miskito territorial councils on a pine resin initiative, community leaders gift the company two bottles of Batana Oil. The gesture carries deep cultural significance and reveals a new path rooted in ancestral craftsmanship.",
  },
  {
    year: "2020",
    title: "Family-Led Renewal",
    description:
      "Forestal MT reorganizes as a consensus-led, family-owned enterprise. The company reaffirms its core purpose: honor tradition, innovate responsibly, and protect culture and landscape.",
  },
  {
    year: "2023",
    title: "Global Expansion",
    description:
      "Forestal MT begins serving customers worldwide, bringing Honduran ethnobotanical traditions to international markets across North America, Europe, and Asia.",
  },
  {
    year: "2024",
    title: "B2B Growth",
    description:
      "Strategic partnerships accelerate, including Fortune 500 companies. Dabur International becomes a key client, validating origin-crafted quality at global scale.",
  },
  {
    year: "2025",
    title: "Digital Expansion",
    description:
      "Comprehensive e-commerce platform launches, serving both B2C and B2B customers directly. Full digital presence completes the forest-to-customer chain.",
  },
];

const collections = [
  {
    title: "Batana Oil",
    eyebrow: "Ancestral Miskito Elixir",
    tag: "Pure & Unrefined",
    description:
      "Wild-harvested Elaeis oleifera from La Mosquitia. Traditionally processed using ancestral Miskito methods for hair restoration, skin nourishment, and beard care.",
    href: "/batana-oil/",
    image: "https://cdn.forestal-mt.com/pages/batana-oil/hero.jpg",
  },
  {
    title: "Stingless Bee Honey",
    eyebrow: "The Maya Heritage",
    tag: "Raw & Traditional",
    description:
      "Raw, unfiltered Jimerito honey from ancestral log hives. Harvested using traditional Mayan methods, prized for centuries for medicinal properties and complex flavor.",
    href: "/stingless-bee-honey/",
    image: "https://cdn.forestal-mt.com/pages/stingless-bee-honey/hero.jpg",
  },
  {
    title: "Traditional Herbs",
    eyebrow: "Sacred Wisdom Rooted in Nature",
    tag: "Wildcrafted & Shade-Dried",
    description:
      "41 wildcrafted botanical varieties from Honduran cloud forests, lowland jungles, and coastal areas. Shade-dried to preserve essential oils and active compounds.",
    href: "/traditional-herbs/",
    image: "https://cdn.forestal-mt.com/pages/traditional-herbs/hero.jpg",
  },
];

const values = [
  {
    title: "Authenticity",
    description:
      "Direct sourcing and a clear chain of origin. Every product is genuine, sourced directly from Honduran producers using traditional methods passed down through generations.",
  },
  {
    title: "Quality",
    description:
      "Artisanal methods that protect botanical potency. From harvest to packaging, every step is carefully monitored to deliver the highest quality products.",
  },
  {
    title: "Respect",
    description:
      "Care for land, people, and culture across generations. Responsible harvesting that protects natural resources. Wild-harvesting methods that ensure ecological balance.",
  },
  {
    title: "Community",
    description:
      "Direct partnerships with local communities ensuring fair compensation and supporting local economies in rural Honduras. Every purchase sustains rural livelihoods.",
  },
  {
    title: "Trust",
    description:
      "Long-term partnerships built on honesty and mutual benefit. Honest communication about our products, their origins, and their traditional uses.",
  },
  {
    title: "Heritage",
    description:
      "Preserving and sharing Honduras' ethnobotanical knowledge with the world. Success measured by the health of forests, strength of partnerships, and livelihoods sustained.",
  },
];

const impacts = [
  "<strong>Direct partnerships with local harvesters:</strong> No intermediaries, no brokers",
  "<strong>Fair compensation for traditional knowledge keepers:</strong> Indigenous communities receive fair payment for ancestral methods",
  "<strong>Sustainable harvesting practices:</strong> Wild-harvesting that protects ecosystems and ensures regeneration",
  "<strong>Rural economic development:</strong> Supporting livelihoods in Olancho and La Mosquitia",
  "<strong>Cultural preservation:</strong> Keeping traditional processing methods and ethnobotanical knowledge alive",
];

const whoWeAreBullets = [
  "Artisanal and wild-harvested products rooted in indigenous knowledge",
  "Direct sourcing from native ecosystems and cultural territories",
  "Traditional processing that preserves botanical potency",
  "Ethical export with a clear chain of origin",
  "Diversified operations across exports, real estate, commerce, agriculture, and livestock",
];

const impactStats = [
  { target: 5000, label: "Hectares Stewarded", suffix: "+" },
  { target: 46, label: "Products" },
  { target: 4, label: "Continents Served" },
  { target: 6, label: "Years of Partnerships", suffix: "+" },
];

const leadership = [
  {
    name: "Nery Roberto Murillo M.",
    title: "Founder",
    bio: "Entered the lumber industry in the 1990s with a long-term vision. Founded Forestal MT in 2009. His philosophy of responsible land management became the foundation for the company's ethnobotanical mission.",
  },
  {
    name: "Nery Samuel Murillo",
    title: "General Manager",
    bio: "Strategic direction and international partnerships. Leading the company's digital expansion and global B2B/B2C growth across North America, Europe, and Asia.",
  },
  {
    name: "Operations & Finance",
    title: "Family Leadership",
    bio: "Quality control, sourcing, production oversight, compliance, accounting, and regulatory affairs. Three generations working together to maintain the commitment to quality and trust.",
  },
];
---

<BaseLayout>
  <Head
    slot="head"
    title={data.title}
    description={data.description}
    canonicalUrl={data.canonicalUrl}
    pageName={data.pageName}
    og={data.og}
    twitter={data.twitter}
    schemas={data.schemas}
  />

  {
    /* ═══════════════════════════════════════════════════════════════
      1. HERO
  ═══════════════════════════════════════════════════════════════ */
  }
  <Hero
    background={data.hero.background}
    eyebrow={data.hero.eyebrow}
    title={data.hero.title}
    subtitle={data.hero.subtitle}
    description={data.hero.description}
    ctas={data.hero.ctas}
  />

  {
    /* ═══════════════════════════════════════════════════════════════
      2. BREADCRUMB
  ═══════════════════════════════════════════════════════════════ */
  }
  <Breadcrumb pageName={data.pageName} />

  {
    /* ═══════════════════════════════════════════════════════════════
      3. WHO WE ARE — Intro narrative + feature bullets
  ═══════════════════════════════════════════════════════════════ */
  }
  <section class="surface-warm py-24">
    <div class="mx-auto max-w-3xl px-6 text-center lg:px-12">
      <SectionHeader eyebrow="Who We Are" heading="Rooted in Honduras,<br />Serving the World" />
      <p
        class="reveal-on-scroll mt-8 font-[family-name:var(--font-body)] text-[15px] leading-[1.85] text-[#333]/70"
      >
        Forestal Murillo Tejada S. de R.L. is a <strong class="font-semibold text-[#333]/85"
          >100% family-owned Honduran ethnobotanical exporter</strong
        > based in San Francisco de la Paz, Olancho. Rooted in ancestral knowledge and long-term care
        for the land, we source, craft, and export origin-true botanicals through direct partnerships
        with indigenous communities.
      </p>
      <p
        class="reveal-on-scroll mt-4 font-[family-name:var(--font-body)] text-[15px] leading-[1.85] text-[#333]/70"
      >
        From Olancho, one of Honduras' most biodiverse regions, we export artisanal, wild-harvested
        botanicals to partners and consumers across <strong class="font-semibold text-[#333]/85"
          >North America, Central and South America, Europe, and Asia</strong
        >.
      </p>
      <p
        class="reveal-on-scroll mt-4 font-[family-name:var(--font-body)] text-[15px] leading-[1.85] text-[#333]/70"
      >
        Our business model reflects long-term resilience through <strong
          class="font-semibold text-[#333]/85">diversified operations</strong
        > including international exports, real estate development, local commerce, agriculture, and
        livestock.
      </p>
    </div>
    <div class="reveal-on-scroll mx-auto mt-12 max-w-2xl px-6 lg:px-12">
      <FeatureList items={whoWeAreBullets} />
    </div>
  </section>

  {
    /* ═══════════════════════════════════════════════════════════════
      4. TRUST MARQUEE
  ═══════════════════════════════════════════════════════════════ */
  }
  <TrustMarquee />

  {
    /* ═══════════════════════════════════════════════════════════════
      5. MISSION / VISION / PROMISE — GoldTopCards
  ═══════════════════════════════════════════════════════════════ */
  }
  <section class="surface-parchment py-24">
    <div class="mx-auto max-w-7xl px-6 lg:px-12">
      <SectionHeader eyebrow="What Drives Us" heading="Mission, Vision, and Promise" />

      <div class="stagger-children mt-16 grid grid-cols-1 gap-6 md:grid-cols-3">
        <GoldTopCard
          eyebrow="Mission"
          heading="Preserve & Share"
          body="To preserve and ethically share Honduras' ancestral ethnobotanical wisdom through pure, artisanal products that sustain ecosystems, honor indigenous knowledge holders, and serve wellness markets worldwide."
          size="lg"
        />
        <GoldTopCard
          eyebrow="Vision"
          heading="The Global Benchmark"
          body="To become the world's most trusted source for Honduran ethnobotanical treasures, setting the global benchmark for authenticity, traceability, and responsible trade."
          size="lg"
        />
        <GoldTopCard
          eyebrow="Our Promise"
          heading="Verified Heritage"
          body="Heritage you can verify. Quality you can measure. Sourcing you can trust. We deliver origin-crafted botanicals handled with meticulous care and exported under international standards."
          size="lg"
        />
      </div>
    </div>
  </section>

  {
    /* ═══════════════════════════════════════════════════════════════
      6. WE ARE THE SOURCE — Botanical immersion + GlassCards
  ═══════════════════════════════════════════════════════════════ */
  }
  <BotanicalSection
    image={`${R2_ABOUT}/sourced-from-origin.jpg`}
    alt="Forestal MT sourcing directly from Honduran communities"
  >
    <div class="mx-auto max-w-4xl px-6 text-center lg:px-12">
      <SectionHeader
        eyebrow="What Sets Us Apart"
        heading="We Are the Source.<br />Not a Middleman."
        variant="dark"
      />
      <p
        class="reveal-on-scroll mx-auto mt-8 max-w-2xl font-[family-name:var(--font-body)] text-[15px] leading-[1.85] text-white/55"
      >
        Most suppliers resell from unknown origins. We source directly from indigenous communities in
        Honduras who craft these products using ancestral methods. No brokers. No traders. No
        intermediaries.
      </p>
      <p
        class="reveal-on-scroll mx-auto mt-4 max-w-2xl font-[family-name:var(--font-body)] text-[15px] leading-[1.85] text-white/55"
      >
        You get Batana Oil from <em>Elaeis oleifera</em> palms in La Mosquitia, Jimerito honey from
        ancestral log hives, and wildcrafted herbs from native territories — with <strong
          class="font-semibold text-white/75">full traceability from forest to your door</strong
        >.
      </p>
      <p
        class="reveal-on-scroll mx-auto mt-4 max-w-2xl font-[family-name:var(--font-body)] text-[15px] leading-[1.85] text-white/55"
      >
        We ship worldwide, build long-term partnerships, and deliver origin-crafted products with
        consistent quality. When you grow, we grow.
      </p>
      <p
        class="reveal-on-scroll mx-auto mt-6 max-w-2xl font-[family-name:var(--font-body)] text-[14px] leading-[1.85] text-white/40"
      >
        The difference is control, authenticity, and trust — from people who know the forest, the
        harvesters, and every step of the process.
      </p>
    </div>
  </BotanicalSection>

  {
    /* ═══════════════════════════════════════════════════════════════
      7. IMPACT STATS — Animated counters on botanical background
  ═══════════════════════════════════════════════════════════════ */
  }
  <BotanicalSection
    image={`${R2_ABOUT}/indiginuos-partner.jpg`}
    alt="Indigenous partner communities in Honduras"
    overlay="from-charcoal/90 via-charcoal/60 to-charcoal/85"
  >
    <div class="mx-auto max-w-5xl px-6 lg:px-12">
      <ImpactBarIsland client:visible stats={impactStats} />
    </div>
  </BotanicalSection>

  {
    /* ═══════════════════════════════════════════════════════════════
      8. PULL QUOTE — Founder voice
  ═══════════════════════════════════════════════════════════════ */
  }
  <PullQuote
    quote="We don't just export products — we carry forward the knowledge of the people who have lived with these forests for generations. Every bottle of Batana Oil, every jar of honey, every herb tells a story of care, tradition, and trust."
    attribution="Nery Roberto Murillo Montalvan, Founder"
  />

  {
    /* ═══════════════════════════════════════════════════════════════
      9. OUR STORY — SplitEditorial with family photo
  ═══════════════════════════════════════════════════════════════ */
  }
  <section class="surface-warm py-24">
    <SplitEditorial
      eyebrow="Our Story"
      heading="From Forest Stewardship<br />to Global Ambassador"
      image={`${R2_ABOUT}/murillo-tejada-family.jpg`}
      imageAlt="The Murillo Tejada family — founders of Forestal MT"
      direction="left"
      paragraphs={[
        "Our story begins in the forests of Olancho. In the <strong>1990s</strong>, Nery Roberto Murillo Montalvan began working the land and caring for thousands of hectares as a responsibility to future generations.",
        "The early years focused on responsible forestry and pine resin exports, building discipline in land management, logistics, and compliance. In <strong>2018</strong>, during a pine resin project in La Mosquitia, Miskito community leaders gifted us two bottles of traditional Batana Oil. That moment revealed a new path rooted in ancestral knowledge and origin-crafted botanicals.",
        "In <strong>2020</strong>, the family renewed the company's direction and fully embraced ethnobotanicals. Today, Forestal MT serves global partners while protecting the integrity of the forest, the people who harvest with care, and the traditions that make these products possible.",
      ]}
    />
  </section>

  {
    /* ═══════════════════════════════════════════════════════════════
      10. TIMELINE — Vertical company history
  ═══════════════════════════════════════════════════════════════ */
  }
  <section class="relative overflow-hidden border-t border-[#F3C00D]/10 bg-charcoal py-24">
    <div class="relative z-10 mx-auto max-w-5xl px-6 lg:px-12">
      <SectionHeader
        eyebrow="Our Journey"
        heading="From Forest Stewardship<br />to Global Ambassador"
        variant="dark"
      />

      <div class="relative mt-20">
        <div
          class="absolute left-[7.5rem] top-0 hidden h-full w-px bg-gradient-to-b from-[#F3C00D]/40 via-[#F3C00D]/20 to-transparent md:block"
        >
        </div>
        <div
          class="absolute left-4 top-0 h-full w-px bg-gradient-to-b from-[#F3C00D]/40 via-[#F3C00D]/20 to-transparent md:hidden"
        >
        </div>

        <div class="space-y-16 md:space-y-12">
          {
            timeline.map((milestone) => (
              <div class="relative grid grid-cols-1 gap-4 md:grid-cols-[7.5rem_1fr] md:gap-8">
                <div class="pl-10 md:pl-0 md:text-right">
                  <span class="font-[family-name:var(--font-display)] text-[clamp(1.5rem,2.5vw,2rem)] leading-none text-[#F3C00D]">
                    {milestone.year}
                  </span>
                </div>
                <div class="absolute left-4 top-[0.35rem] hidden h-2.5 w-2.5 rounded-full border-2 border-[#F3C00D] bg-charcoal md:left-[6.85rem] md:block" />
                <div class="absolute left-[0.7rem] top-[0.35rem] h-2.5 w-2.5 rounded-full border-2 border-[#F3C00D] bg-charcoal md:hidden" />
                <div class="pl-10 md:pl-8">
                  <h3 class="font-[family-name:var(--font-heading)] text-[1.05rem] font-normal tracking-wide text-white">
                    {milestone.title}
                  </h3>
                  <p class="mt-3 max-w-xl font-[family-name:var(--font-body)] text-[13px] leading-[1.85] text-white/50">
                    {milestone.description}
                  </p>
                </div>
              </div>
            ))
          }
        </div>

        <div class="relative mt-12 md:ml-[7.5rem] md:pl-8">
          <div
            class="absolute left-4 top-1/2 hidden h-3 w-3 -translate-y-1/2 rounded-full bg-[#F3C00D]/40 md:left-[-0.65rem] md:block"
          >
          </div>
          <div
            class="absolute left-[0.55rem] top-1/2 h-3 w-3 -translate-y-1/2 rounded-full bg-[#F3C00D]/40 md:hidden"
          >
          </div>
          <p
            class="pl-10 font-[family-name:var(--font-body)] text-[13px] italic text-white/30 md:pl-0"
          >
            The journey continues...
          </p>
        </div>
      </div>
    </div>
  </section>

  {
    /* ═══════════════════════════════════════════════════════════════
      11. HISTORY DEEP DIVE — Accordion for detailed history sections
  ═══════════════════════════════════════════════════════════════ */
  }
  <section class="surface-dark grain relative py-16">
    <div class="relative z-10 mx-auto max-w-3xl px-6 lg:px-12">
      <AccordionGroup variant="dark">
        <AccordionItem title="Expansion into Ethnobotanicals">
          <p class="text-white/55">
            With renewed clarity of mission, Forestal MT expanded into <strong
              class="text-white/70">three curated botanical collections</strong
            >, each rooted in Honduras' ancestral heritage:
          </p>
          <ul class="mt-3 space-y-2 text-white/55">
            <li>
              <strong class="text-white/70">Batana Oil</strong> — Wild-harvested <em
                >Elaeis oleifera</em
              > from La Mosquitia
            </li>
            <li>
              <strong class="text-white/70">Stingless Bee Honey</strong> — Traditional Jimerito from
              native forests
            </li>
            <li>
              <strong class="text-white/70">Traditional Herbs</strong> — Wildcrafted botanicals from
              cloud forests and coastal regions
            </li>
          </ul>
          <p class="mt-3 text-white/55">
            These collections bridge indigenous territories, traditional harvesters, and biodiverse
            Honduran landscapes to global partners seeking authenticity and traceability.
          </p>
        </AccordionItem>
        <AccordionItem title="Strategic Diversification">
          <p class="text-white/55">
            Alongside its core ethnobotanical and forestry operations, Forestal MT maintains <strong
              class="text-white/70">complementary business activities</strong
            > that strengthen long-term resilience and regional impact:
          </p>
          <ul class="mt-3 space-y-2 text-white/55">
            <li>
              <strong class="text-white/70">Real estate development</strong> — Strategic land
              management and property development
            </li>
            <li>
              <strong class="text-white/70">Livestock operations</strong> — Sustainable ranching
              practices
            </li>
            <li>
              <strong class="text-white/70">Strategic investments</strong> — Portfolio
              diversification for generational wealth
            </li>
            <li>
              <strong class="text-white/70">Local commerce</strong> — Supporting regional economic
              development
            </li>
          </ul>
        </AccordionItem>
        <AccordionItem title="Present Day — Global Ambassador">
          <p class="text-white/55">
            What began as a single bottle of Batana Oil has grown into a <strong
              class="text-white/70">multi-collection export enterprise</strong
            > serving partners across North America, Central and South America, Europe, and Asia.
          </p>
          <p class="mt-3 text-white/55">
            Through continued growth, Forestal MT preserves a transparent forest-to-customer chain
            and remains committed to safeguarding ancestral knowledge, ecological integrity, and
            sustainable rural livelihoods.
          </p>
        </AccordionItem>
      </AccordionGroup>
    </div>
  </section>

  {
    /* ═══════════════════════════════════════════════════════════════
      12. COLLECTIONS — 3 editorial portrait cards
  ═══════════════════════════════════════════════════════════════ */
  }
  <section class="surface-warm py-24">
    <div class="mx-auto max-w-7xl px-6 lg:px-12">
      <SectionHeader eyebrow="Our Collections" heading="Three Traditions, One Origin" />

      <div class="stagger-children mt-16 grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-3">
        {
          collections.map((col) => (
            <a
              href={col.href}
              class="group relative flex aspect-[3/4] flex-col justify-end overflow-hidden rounded-[2px] shadow-sm transition-shadow duration-500 hover:shadow-xl"
            >
              <img
                src={col.image}
                alt={col.title}
                class="absolute inset-0 h-full w-full object-cover transition-transform duration-700 ease-out group-hover:scale-[1.03]"
                loading="lazy"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-[#111]/85 via-[#111]/25 to-transparent transition-opacity duration-500" />

              <div class="relative z-10 p-8 pb-10">
                <p class="font-[family-name:var(--font-heading)] text-[9px] font-normal uppercase tracking-[0.35em] text-[#F3C00D]/80">
                  {col.eyebrow}
                </p>
                <h3 class="mt-2.5 font-[family-name:var(--font-display)] text-[1.65rem] leading-tight text-white">
                  {col.title}
                </h3>
                <p class="mt-1 font-[family-name:var(--font-heading)] text-[10px] font-normal uppercase tracking-[0.2em] text-white/50">
                  {col.tag}
                </p>
                <p class="mt-4 max-w-xs font-[family-name:var(--font-body)] text-[13px] leading-relaxed text-white/55 transition-all duration-500 ease-out md:translate-y-3 md:opacity-0 md:group-hover:translate-y-0 md:group-hover:opacity-100">
                  {col.description}
                </p>
                <span class="mt-5 inline-flex items-center gap-1.5 font-[family-name:var(--font-ui)] text-[11px] font-semibold uppercase tracking-[0.15em] text-white/70 transition-all duration-300 group-hover:text-[#F3C00D]">
                  Explore Collection
                  <svg
                    class="h-3 w-3 transition-transform duration-300 group-hover:translate-x-1"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3"
                    />
                  </svg>
                </span>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </section>

  {
    /* ═══════════════════════════════════════════════════════════════
      13. HOW WE SELL — B2B/B2C ChannelSplit on botanical background
  ═══════════════════════════════════════════════════════════════ */
  }
  <BotanicalSection
