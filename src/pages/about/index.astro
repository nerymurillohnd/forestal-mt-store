---
/**
 * ABOUT — Company page.
 * Narrative flow: who → story → what we do → how → why it matters → closing.
 */
import BaseLayout from "../../layouts/BaseLayout.astro";
import Head from "../../components/Head.astro";
import Breadcrumb from "../../components/Breadcrumb.astro";
import Hero from "../../components/Hero.astro";
import SectionHeader from "../../components/SectionHeader.astro";
import GoldTopCard from "../../components/GoldTopCard.astro";
import TrustMarquee from "../../components/TrustMarquee.astro";
import OriginMetadata from "../../components/OriginMetadata.astro";
import SplitEditorial from "../../components/SplitEditorial.astro";
import PullQuote from "../../components/PullQuote.astro";
import LeadershipCard from "../../components/LeadershipCard.astro";
import ChannelSplit from "../../components/ChannelSplit.astro";
import FeatureList from "../../components/FeatureList.astro";
import ImpactBarIsland from "../../components/islands/ImpactBarIsland.tsx";
import { cdnImage } from "../../lib/image";
import { getEntry } from "astro:content";

const page = await getEntry("pages", "about");
if (!page) throw new Error("Missing content: pages/about");
const { data } = page;

const R2_ABOUT = "https://cdn.forestal-mt.com/pages/about";

/* ── Data ── */

const timeline = [
  {
    year: "1990s",
    title: "Where It All Started",
    description:
      "Nery Roberto Murillo Montalvan started working in the lumber industry. Over the years, he took care of thousands of hectares of forest in Olancho — not as a business move, but as something you pass down to your children.",
  },
  {
    year: "2009",
    title: "Making It Official",
    description:
      "What started as a personal commitment became a company: Forestal Murillo Tejada S. de R.L. The focus was responsible timber, pine resin, and keeping the forest healthy for the long run.",
  },
  {
    year: "2018",
    title: "Two Bottles That Changed Everything",
    description:
      "During a pine resin project in La Mosquitia, Miskito community leaders gifted us two bottles of Batana Oil. That small gesture opened a door we didn't know existed — one that connected us to centuries of ancestral knowledge.",
  },
  {
    year: "2020",
    title: "A Family Decision",
    description:
      "The whole family sat down and decided: this is our new direction. We reorganized the company around ethnobotanicals, keeping the same values that built the forestry business — honesty, care, and long-term thinking.",
  },
  {
    year: "2023–24",
    title: "Going Global",
    description:
      "We started shipping to customers and businesses across North America, Europe, and Asia. Partners like Dabur International validated what we always knew — that origin-crafted quality speaks for itself.",
  },
  {
    year: "2025",
    title: "Direct to You",
    description:
      "Our e-commerce platform goes live. For the first time, anyone in the world can buy directly from us — the same quality that our wholesale partners trust, now available to everyone.",
  },
];

const collections = [
  {
    title: "Batana Oil",
    eyebrow: "From La Mosquitia",
    tag: "Pure & Unrefined",
    description:
      "Wild-harvested from Elaeis oleifera palms by Miskito communities. Used for centuries for hair, skin, and beard care.",
    href: "/batana-oil/",
    image: "https://cdn.forestal-mt.com/pages/batana-oil/hero.jpg",
  },
  {
    title: "Stingless Bee Honey",
    eyebrow: "Jimerito — Maya Heritage",
    tag: "Raw & Traditional",
    description:
      "Raw honey from native stingless bees, harvested from ancestral log hives using traditional Mayan methods.",
    href: "/stingless-bee-honey/",
    image: "https://cdn.forestal-mt.com/pages/stingless-bee-honey/hero.jpg",
  },
  {
    title: "Traditional Herbs",
    eyebrow: "41 Varieties",
    tag: "Wildcrafted & Shade-Dried",
    description:
      "Botanical varieties from cloud forests, lowland jungles, and coastal areas. Shade-dried to keep everything that matters intact.",
    href: "/traditional-herbs/",
    image: "https://cdn.forestal-mt.com/pages/traditional-herbs/hero.jpg",
  },
];

const values = [
  {
    title: "Authenticity",
    description:
      "Every product comes straight from the people who make it. No middlemen, no mystery. You can trace it back to the forest it came from.",
  },
  {
    title: "Quality",
    description:
      "We don't cut corners. From harvest to packaging, every step is done with care — the same way it's been done for generations.",
  },
  {
    title: "Respect",
    description:
      "For the land, the communities, and the traditions that make this possible. We harvest responsibly because the forest isn't ours — we're just passing through.",
  },
  {
    title: "Community",
    description:
      "Fair pay, direct partnerships, no exploitation. When our partners do well, we all do well. That's how business should work.",
  },
  {
    title: "Trust",
    description:
      "We say what we mean and deliver what we promise. Our relationships are built on years of honest work, not contracts.",
  },
  {
    title: "Heritage",
    description:
      "This knowledge has survived centuries. We're not inventing anything new — we're making sure it reaches the people who need it.",
  },
];

const impactStats = [
  { target: 46, label: "Products" },
  { target: 132, label: "SKUs" },
  { target: 4, label: "Continents Served" },
  { target: 6, label: "Years of Direct Partnerships", suffix: "+" },
];

const leadership = [
  {
    name: "Nery Roberto Murillo Montalvan",
    title: "General Manager & Legal Representative",
    bio: "Founded the company in 2009 after two decades of forest stewardship in Olancho. The structural backbone of everything we do.",
  },
  {
    name: "Lucy Maira Tejada Flores",
    title: "Partner",
    bio: "",
  },
  {
    name: "Jackeline Grissell Murillo Tejada",
    title: "Partner",
    bio: "",
  },
  {
    name: "Nery Samuel Murillo Tejada",
    title: "Operations, Exports & Sales Manager",
    bio: "International partnerships, digital strategy, and export operations. Leading the company's growth across four continents.",
  },
  {
    name: "Nery Roberto Murillo Tejada",
    title: "Partner",
    bio: "",
  },
  {
    name: "Nery Alfredo Murillo Tejada",
    title: "Partner",
    bio: "",
  },
];
---

<BaseLayout>
  <Head
    slot="head"
    title={data.title}
    description={data.description}
    canonicalUrl={data.canonicalUrl}
    pageName={data.pageName}
    og={data.og}
    twitter={data.twitter}
    schemas={data.schemas}
  />

  {/* ── 1. HERO ── */}
  <Hero
    background={data.hero.background}
    eyebrow={data.hero.eyebrow}
    title={data.hero.title}
    subtitle={data.hero.subtitle}
    description={data.hero.description}
    ctas={data.hero.ctas}
  />

  {/* ── 2. BREADCRUMB ── */}
  <Breadcrumb pageName={data.pageName} />

  {/* ── 3. WHO WE ARE — family photo (full, uncropped) + text ── */}
  <section class="surface-warm py-20">
    <div
      class="mx-auto grid max-w-7xl grid-cols-1 items-center gap-10 px-6 lg:grid-cols-2 lg:gap-12 lg:px-12"
    >
      {/* Image — 2/3 width, natural aspect ratio, no cropping */}
      <div class="overflow-hidden rounded-[2px]">
        <img
          src={cdnImage(`${R2_ABOUT}/murillo-tejada-family.jpg`, { w: 1200 })}
          alt="The Murillo Tejada family — founders of Forestal MT"
          class="h-auto w-full"
          loading="lazy"
          decoding="async"
        />
        <div class="absolute inset-0 rounded-[2px] ring-1 ring-inset ring-[#F3C00D]/10"></div>
      </div>

      {/* Text — 1/3 width */}
      <div class="reveal-on-scroll">
        <p
          class="font-[family-name:var(--font-heading)] text-[11px] font-normal uppercase tracking-[0.35em] text-gold-dark"
        >
          Who We Are
        </p>
        <h2
          class="mt-4 font-[family-name:var(--font-display)] text-[clamp(1.75rem,3.5vw,2.5rem)] font-normal text-charcoal"
        >
          A Family Business,<br />Rooted in Honduras
        </h2>
        <hr class="gold-rule-left" />
        <p
          class="mt-8 font-[family-name:var(--font-body)] text-[15px] leading-[1.85] text-[#333]/70"
        >
          We're <strong class="font-semibold text-[#333]/85">Forestal Murillo Tejada</strong> — a family-owned
          company from San Francisco de la Paz, Olancho, Honduras. We source, craft, and export natural
          products that come from the land and the people who have worked it for generations.
        </p>
        <p
          class="mt-4 font-[family-name:var(--font-body)] text-[15px] leading-[1.85] text-[#333]/70"
        >
          Batana Oil from La Mosquitia. Stingless bee honey from ancestral log hives. Wildcrafted
          herbs from cloud forests. <strong class="font-semibold text-[#333]/85"
            >46 products, 132 SKUs</strong
          > — all with a clear chain of origin.
        </p>
        <p
          class="mt-4 font-[family-name:var(--font-body)] text-[15px] leading-[1.85] text-[#333]/70"
        >
          No brokers. No middlemen. Just honest relationships built over years of working together.
        </p>
      </div>
    </div>
  </section>

  {/* ── 4. TRUST MARQUEE ── */}
  <TrustMarquee />

  {/* ── 5. MISSION & VISION — two cards, compact ── */}
  <section class="surface-parchment py-16">
    <div class="mx-auto max-w-5xl px-6 lg:px-12">
      <SectionHeader eyebrow="What Drives Us" heading="Mission and Vision" />
      <div class="mt-12 grid grid-cols-1 gap-6 md:grid-cols-2">
        <GoldTopCard
          eyebrow="Our Mission"
          heading="Keep It Real, Share It Right"
          body="To preserve Honduras' ancestral botanical knowledge and share it with the world through pure, artisanal products — while making sure the communities that create them are treated fairly and the ecosystems they come from stay healthy."
          size="lg"
        />
        <GoldTopCard
          eyebrow="Our Vision"
          heading="The Name You Trust"
          body="To become the most trusted name in Honduran natural products. Not the biggest — the most trusted. The one where you know exactly where it comes from, who made it, and that it's the real thing."
          size="lg"
        />
      </div>
    </div>
  </section>

  {/* ── 6. OUR STORY — founder photo, side by side ── */}
  <section class="surface-warm py-20">
    <SplitEditorial
      eyebrow="Our Story"
      heading="From the Forest<br />to the World"
      image={`${R2_ABOUT}/the-founder-legacy.jpg`}
      imageAlt="Nery Roberto Murillo — Founder of Forestal MT, in the pine forests of Olancho"
      direction="right"
      paragraphs={[
        "It started in the <strong>1990s</strong>. Nery Roberto Murillo Montalvan began working in the lumber industry in Olancho, taking care of thousands of hectares of forest. Not to sell it — to protect it for his kids and grandkids.",
        "For years, the business was timber and pine resin. Then in <strong>2018</strong>, during a project in La Mosquitia, Miskito community leaders gave us two bottles of traditional Batana Oil. That small gift changed the direction of the entire company.",
        "In <strong>2020</strong>, the family made a decision together: we go all in on ethnobotanicals. Today we serve partners across four continents, but the core hasn't changed — honest work, real products, and respect for the people and the land.",
      ]}
    />
  </section>

  {/* ── 7. TIMELINE — compact, dark ── */}
  <section class="border-t border-[#F3C00D]/10 bg-charcoal py-20">
    <div class="mx-auto max-w-4xl px-6 lg:px-12">
      <SectionHeader eyebrow="How We Got Here" heading="Our Journey" variant="dark" />

      <div class="relative mt-16">
        {/* Vertical line */}
        <div
          class="absolute left-4 top-0 h-full w-px bg-gradient-to-b from-[#F3C00D]/40 via-[#F3C00D]/20 to-transparent md:left-[6rem]"
        >
        </div>

        <div class="space-y-10">
          {
            timeline.map((m) => (
              <div class="relative grid grid-cols-1 gap-3 md:grid-cols-[6rem_1fr] md:gap-6">
                <div class="pl-10 md:pl-0 md:text-right">
                  <span class="font-[family-name:var(--font-display)] text-[clamp(1.2rem,2vw,1.5rem)] leading-none text-[#F3C00D]">
                    {m.year}
                  </span>
                </div>
                <div class="absolute left-[0.65rem] top-[0.3rem] h-2 w-2 rounded-full border-2 border-[#F3C00D] bg-charcoal md:left-[5.6rem]" />
                <div class="pl-10 md:pl-6">
                  <h3 class="font-[family-name:var(--font-heading)] text-[0.95rem] font-normal tracking-wide text-white">
                    {m.title}
                  </h3>
                  <p class="mt-2 max-w-lg font-[family-name:var(--font-body)] text-[13px] leading-[1.8] text-white/45">
                    {m.description}
                  </p>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </section>

  {/* ── 8. OUR CATALOGUES — collections + product photo, side by side ── */}
  <section class="surface-warm py-20">
    <SplitEditorial
      eyebrow="Our Catalogues"
      heading="Three Collections,<br />One Origin"
      image={`${R2_ABOUT}/ethnobotanical-collections.jpg`}
      imageAlt="Forestal MT product collections — Batana Oil, Jimerito Honey, Traditional Herbs"
      direction="left"
      paragraphs={[
        "Everything we sell comes from Honduras. Three collections, each rooted in a different tradition and territory — but all sharing the same commitment to authenticity and quality.",
      ]}
    >
      <div class="mt-8 space-y-6">
        {
          collections.map((col) => (
            <a href={col.href} class="group flex items-start gap-4 transition-colors duration-200">
              <span class="mt-1 h-px w-5 shrink-0 bg-[#F3C00D]/50 transition-all duration-300 group-hover:w-8 group-hover:bg-[#F3C00D]" />
              <div>
                <h3 class="font-[family-name:var(--font-heading)] text-[0.95rem] font-normal tracking-wide text-charcoal transition-colors duration-200 group-hover:text-[#206D03]">
                  {col.title}
                  <span class="ml-2 font-[family-name:var(--font-ui)] text-[10px] uppercase tracking-[0.15em] text-charcoal/40">
                    {col.tag}
                  </span>
                </h3>
                <p class="mt-1 max-w-sm font-[family-name:var(--font-body)] text-[13px] leading-relaxed text-[#333]/55">
                  {col.description}
                </p>
              </div>
            </a>
          ))
        }
      </div>
    </SplitEditorial>
  </section>

  {/* ── 9. HOW DO WE SELL ── */}
  <section class="grain bg-charcoal py-20">
    <div class="mx-auto max-w-5xl px-6 lg:px-12">
      <SectionHeader eyebrow="How We Sell" heading="Two Channels, Same Quality" variant="dark" />
      <div class="mt-14">
        <ChannelSplit
          b2b={{
            eyebrow: "For Businesses",
            heading: "Wholesale & Private Label",
            items: [
              "Bulk ingredients for formulators, brands, and distributors",
              "Custom packaging and private labeling available",
              "Consistent supply with full traceability",
              "Worldwide shipping via DHL Express",
            ],
            cta: { label: "Wholesale Program", url: "/wholesale/" },
          }}
          b2c={{
            eyebrow: "For You",
            heading: "Direct to Consumer",
            items: [
              "Retail-ready products through our online shop",
              "The same origin-crafted quality our partners trust",
              "International shipping available",
            ],
            cta: { label: "Browse Products", url: "/products/" },
          }}
        />
        <p
          class="mx-auto mt-8 max-w-lg text-center font-[family-name:var(--font-body)] text-[13px] italic text-white/30"
        >
          Whether you need 10 kg or 1,000 kg — same quality, same commitment, same direct line to
          us.
        </p>
      </div>
    </div>
  </section>

  {/* ── 10. OUR VALUES — compact grid ── */}
  <section class="surface-parchment py-16">
    <div class="mx-auto max-w-7xl px-6 lg:px-12">
      <SectionHeader eyebrow="What Guides Us" heading="Our Values" />
      <div class="stagger-children mt-12 grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-3">
        {
          values.map((v, i) => (
            <GoldTopCard
              number={String(i + 1).padStart(2, "0")}
              heading={v.title}
              body={v.description}
            />
          ))
        }
      </div>
    </div>
  </section>

  {/* ── 11. WHAT SETS US APART + INDIGENOUS PARTNERSHIPS — side by side ── */}
  <section class="surface-warm py-20">
    <SplitEditorial
      eyebrow="What Sets Us Apart"
      heading="We Go to the Source.<br />That's the Difference."
      image={`${R2_ABOUT}/indiginuos-partner.jpg`}
      imageAlt="Nery Samuel Murillo with an indigenous Miskito elder in La Mosquitia, Honduras"
      direction="right"
      paragraphs={[
        "Most companies that sell Batana Oil or Jimerito honey buy it from a supplier who bought it from another supplier. <strong>We don't.</strong> We go to La Mosquitia. We sit with the community leaders. We know the harvesters by name.",
        "This photo isn't stock photography — it's a real moment from one of our visits to Miskito communities. These are the people who have kept this knowledge alive for centuries, and they deserve to be treated as partners, not suppliers.",
        "That direct relationship is what makes our products different. It's not marketing — it's how we actually work. No brokers, no mystery sourcing, no shortcuts.",
      ]}
    >
      <div class="mt-8">
        <FeatureList
          items={[
            "Direct partnerships with indigenous Miskito communities",
            "Fair pay for traditional knowledge keepers",
            "Sustainable harvesting that protects the ecosystem",
            "Full traceability from forest to your door",
          ]}
        />
      </div>
    </SplitEditorial>
  </section>

  {/* ── 12. IMPACT STATS — solid dark background, no image ── */}
  <section class="grain bg-charcoal py-14">
    <div class="mx-auto max-w-5xl px-6 lg:px-12">
      <ImpactBarIsland client:visible stats={impactStats} />
    </div>
  </section>

  {/* ── 13. COMMUNITY IMPACT + COMMITMENT ── */}
  <section class="surface-parchment py-16">
    <SplitEditorial
      eyebrow="Why It Matters"
      heading="From Forest to Family:<br />The Real Chain of Custody"
      paragraphs={[
        "Every purchase supports real people in rural Honduras. Not a charity — a business built on fair partnerships where everyone benefits.",
        "We source directly from Miskito communities in La Mosquitia and indigenous harvesters in Olancho. No intermediaries, no anonymous sourcing. The people who grow and gather our products are paid fairly, and the ecosystems they steward are protected.",
      ]}
      image={cdnImage(`${R2_ABOUT}/sourced-from-origin.jpg`, { w: 1200 })}
      imageAlt="Forestal MT sourcing directly from origin communities in Honduras"
      direction="left"
      variant="light"
    >
      <div class="mt-8">
        <FeatureList
          items={[
            "<strong>Direct partnerships:</strong> No intermediaries — harvesters get paid fairly",
            "<strong>Cultural preservation:</strong> Traditional methods stay alive because they're valued, not just studied",
            "<strong>Sustainable harvesting:</strong> We only take what the forest can give back",
            "<strong>Rural livelihoods:</strong> Supporting families in Olancho and La Mosquitia",
          ]}
        />
      </div>
    </SplitEditorial>
  </section>

  {/* ── 14. LEADERSHIP ── */}
  <section class="surface-warm py-16">
    <div class="mx-auto max-w-7xl px-6 lg:px-12">
      <SectionHeader eyebrow="The People Behind It" heading="Leadership" />
      <p
        class="reveal-on-scroll mx-auto mt-4 max-w-2xl text-center font-[family-name:var(--font-body)] text-[14px] leading-[1.85] text-[#333]/60"
      >
        Family-owned, family-run. Three generations working together.
      </p>
      <div class="stagger-children mt-12 grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
        {
          leadership.map((leader) => (
            <LeadershipCard name={leader.name} title={leader.title} bio={leader.bio || undefined} />
          ))
        }
      </div>
    </div>
  </section>

  {/* ── 15. LOGO + SLOGAN — combined section ── */}
  <section class="border-t border-[#F3C00D]/10 bg-charcoal py-16">
    <div class="mx-auto max-w-3xl px-6 text-center lg:px-12">
      <SectionHeader eyebrow="The Symbol" heading="Our Logo" variant="dark" />
      <p
        class="reveal-on-scroll mt-6 font-[family-name:var(--font-body)] text-[14px] leading-[1.85] text-white/50"
      >
        The <strong class="text-white/70">six pine trees</strong> in our logo stand for family and continuity.
        The tallest one represents the founder. The arrangement shows the flow from origin to export —
        every product carries a clear, honest story.
      </p>
      <div class="mx-auto mt-8 max-w-md">
        <OriginMetadata
          variant="dark"
          metadata={[
            { label: "Center Tree", value: "The founder — structural backbone" },
            { label: "Front Tree", value: "Heart of the family" },
            { label: "Side Trees", value: "Operations and growth" },
            { label: "Outer Trees", value: "Future generations" },
          ]}
        />
      </div>
    </div>
    <div class="mx-auto mt-16 max-w-3xl px-6 text-center lg:px-12">
      <div class="h-px w-12 mx-auto bg-[#F3C00D]/30"></div>
      <p
        class="mt-10 font-[family-name:var(--font-display)] text-[clamp(1.75rem,3.5vw,2.75rem)] leading-tight text-white"
      >
        Exporting Nature Without Borders
      </p>
      <p
        class="mx-auto mt-6 max-w-xl font-[family-name:var(--font-body)] text-[14px] leading-[1.85] text-white/40"
      >
        More than a tagline. It means our products travel far, but never lose where they come from.
        Honduras to the world, with integrity and clear origin.
      </p>
    </div>
  </section>

  {/* ── 16. OUR PROMISE ── */}
  <PullQuote
    quote="We don't just export products. We carry forward the knowledge of the people who have lived with these forests for generations. Every bottle, every jar, every herb — it tells a story of care and trust. That's our promise: what you get is real, and the people behind it are taken care of."
    attribution="The Murillo Tejada Family"
  />

  {/* ── 17. CTAs — compact, side by side ── */}
  <section class="surface-warm py-12">
    <div class="mx-auto flex max-w-xl flex-wrap items-center justify-center gap-4 px-6">
      <a
        href="/contact/"
        class="inline-block rounded-[3px] bg-[#206D03] px-8 py-3.5 font-[family-name:var(--font-ui)] text-[13px] font-semibold text-white transition-all duration-300 hover:bg-[#185202] hover:shadow-lg hover:shadow-[#206D03]/20"
      >
        Get in Touch
      </a>
      <a
        href="/wholesale/"
        class="inline-block rounded-[3px] border border-charcoal/20 px-8 py-3.5 font-[family-name:var(--font-ui)] text-[13px] font-semibold text-charcoal transition-all duration-300 hover:border-charcoal/40 hover:bg-charcoal/5"
      >
        Wholesale Program
      </a>
    </div>
  </section>
</BaseLayout>
