  { name: "Quassia — Bitter Wood", localName: "Hombre Grande", sku: "FMT-TH-HG", description: "One of the most intensely bitter woods in the tropics. Used as a digestive bitter and for cleansing." },
  { name: "Sarsaparilla", localName: "Zarzaparrilla", sku: "FMT-TH-SR", description: "Traditional blood-purifying root valued for skin health and hormonal balance in Central American herbalism." },
  { name: "Sensitive Plant", localName: "Dormilona", sku: "FMT-TH-DO", description: "Named for leaves that fold when touched. Traditional calming herb for anxiety relief and nervous system." },
  { name: "Snake Plant", localName: "Lengua de Suegra", sku: "FMT-TH-SN", description: "Traditional respiratory herb for lung health and immune support. Shade-dried to preserve character." },
  { name: "Soursop Leaves", localName: "Guanabana", sku: "FMT-TH-SL", description: "One of the most popular herbal teas in the Caribbean and Central America for immune support." },
  { name: "Stonebreaker", localName: "Chanca Piedra", sku: "FMT-TH-SP", description: "The name says it all. Traditional herb for kidney and urinary health across Latin America." },
  { name: "Taro Leaf", localName: "Malanga", sku: "FMT-TH-MA", description: "Nutritious traditional green used in soups and herbal preparations for culinary and wellness uses." },
  { name: "Thuja — Cedar Leaves", localName: "", sku: "FMT-TH-CD", description: "Aromatic evergreen herb for respiratory support and immune wellness with a forest-fresh character." },
  { name: "Trumpet Tree Leaves", localName: "Guarumo", sku: "FMT-TH-TT", description: "Distinctive Honduran forest tree traditionally used as a tea for blood sugar balance and prostate health." },
