  ═══════════════════════════════════════════════════════════════ */
  }
  <HeroCinematic
    height="80vh"
    background={{
      type: "video",
      streamId: data.hero.background?.stream,
      caption: data.hero.background?.caption,
    }}
    catalogAccent="herbs"
    eyebrow={data.hero.eyebrow}
    title={data.hero.title.replace(/\n/g, "<br />")}
    subtitle={data.hero.subtitle}
    description={data.hero.body ?? data.hero.description}
    ctas={data.hero.ctas}
  />

  <Breadcrumb pageName={data.pageName} />

  {
    /* ═══════════════════════════════════════════════════════════════
      INTRO — 41 Wildcrafted Varieties centered narrative
  ═══════════════════════════════════════════════════════════════ */
  }
