const processes = [
  {
    number: "01",
    title: "Gathered From Where They Grow",
    description: "Every plant is collected in its natural habitat — no farms, no synthetic inputs. Sourced from biodiverse regions aligned with ancestral gathering sites.",
  },
  {
    number: "02",
    title: "Harvested With Care",
    description: "Handpicked at peak maturity, often in early morning. Only abundant species collected, root systems preserved, harvest sites rotated.",
  },
  {
    number: "03",
    title: "Sorting & Drying",
    description: "Sorted by hand, spread on ventilated drying beds. Natural shade drying in cool, well-ventilated spaces prevents the breakdown of volatile oils.",
  },
  {
    number: "04",
    title: "Final Processing",
    description: "Once fully dry, remaining stems and debris are removed. Stored in airtight containers away from light. Leaves kept whole to preserve volatile compounds.",
  },
];

const origin = {
  origin: "Olancho and La Mosquitia, Honduras",
  source: "Native and long-naturalized medicinal plants",
  heritage: "Indigenous and mestizo ethnobotanical traditions",
  character: "Hand-picked at peak maturity, shade-dried to preserve natural properties",
};

const formats = ["Whole", "Chopped", "Cut", "Cubed", "Crushed"];

const audience = [
  "Herbalists and apothecaries",
  "Natural lifestyle and wellness brands",
  "Botanical formulators and extract producers",
  "Tea makers and specialty retailers",
  "Retailers seeking traceable, wildcrafted ingredients",
  "Consumers who value cultural heritage and nature-based traditions",
];

const sustainability = [
  { title: "Sustainable Wild-Harvesting", description: "Rotation of sites, selective collection, and population monitoring" },
  { title: "Fair Compensation", description: "Economic support for indigenous and rural communities who share their knowledge and labor" },
  { title: "Habitat Protection", description: "Making forest preservation economically viable through value creation" },
  { title: "Cultural Respect", description: "Direct partnerships with herbalists, healers, and traditional practitioners" },
];
---

<BaseLayout>
  <Head
    slot="head"
    title={data.title}
    description={data.description}
    canonicalUrl={data.canonicalUrl}
    pageName={data.pageName}
    og={data.og}
    twitter={data.twitter}
    schemas={data.schemas}
  />

  {/* ═══════════════════════════════════════════════════════════════
      HERO — Video background, cinematic
  ═══════════════════════════════════════════════════════════════ */}
  <section class="grain relative flex min-h-[80vh] items-end overflow-hidden">
    <div class="absolute inset-0">
      <iframe
        src={`https://customer-8w5s9dekjdinwesc.cloudflarestream.com/${data.hero.background.stream}/iframe?muted=true&autoplay=true&loop=true&controls=false`}
        class="h-full w-full scale-110 object-cover"
        allow="autoplay; fullscreen"
        loading="eager"
        title={data.hero.background.caption ?? "Hero video"}
        style="border:none; pointer-events:none;"
      ></iframe>
      <div class="absolute inset-0 bg-gradient-to-t from-[#111]/90 via-[#111]/40 to-[#111]/15"></div>
    </div>

    <div class="relative z-10 mx-auto w-full max-w-7xl px-6 pb-20 lg:px-12">
      <p class="font-[family-name:var(--font-heading)] text-[11px] font-normal uppercase tracking-[0.35em] text-[#F3C00D]/90">
        {data.hero.eyebrow}
      </p>
      <h1 class="mt-4 max-w-3xl font-[family-name:var(--font-display)] text-[clamp(2.5rem,5.5vw,4rem)] font-normal leading-[1.08] text-white"
        set:html={data.hero.title.replace(/\n/g, "<br />")}
      />
      <p class="mt-2 font-[family-name:var(--font-heading)] text-[11px] font-normal uppercase tracking-[0.2em] text-white/50">
        {data.hero.subtitle}
      </p>
      <div class="mt-5 h-px w-20 bg-gradient-to-r from-[#F3C00D]/70 to-transparent"></div>
      <p class="mt-5 max-w-xl font-[family-name:var(--font-body)] text-[15px] leading-relaxed text-white/65">
        {data.hero.body ?? data.hero.description}
      </p>
      <div class="mt-8 flex flex-wrap gap-4">
        {data.hero.ctas?.map((cta: { label: string; url: string }, i: number) => (
          <a
            href={cta.url}
            class:list={[
              "inline-block rounded-[3px] px-7 py-3 font-[family-name:var(--font-ui)] text-[13px] font-semibold tracking-wide transition-all duration-300",
              i === 0
                ? "bg-[#206D03] text-white hover:bg-[#54B006]"
                : "border border-white/25 text-white/90 hover:border-white/50 hover:bg-white/5",
            ]}
          >
            {cta.label}
          </a>
        ))}
      </div>
    </div>
  </section>

  <Breadcrumb pageName={data.pageName} />

  {/* ═══════════════════════════════════════════════════════════════
      INTRO — 41 Wildcrafted Varieties centered narrative
  ═══════════════════════════════════════════════════════════════ */}
  <section class="bg-[#F8F8F0] py-24">
    <div class="mx-auto max-w-3xl px-6 text-center lg:px-12">
      <p class="font-[family-name:var(--font-heading)] text-[11px] font-normal uppercase tracking-[0.35em] text-[#A18500]">
        The Collection
      </p>
      <h2 class="mt-4 font-[family-name:var(--font-display)] text-[clamp(1.75rem,3.5vw,2.5rem)] font-normal text-[#333]">
        41 Wildcrafted Varieties from<br />Honduran Landscapes
      </h2>
      <hr class="gold-rule" />
      <p class="mt-8 font-[family-name:var(--font-body)] text-[15px] leading-[1.85] text-[#333]/70">
        A living archive of ethnobotanical wisdom accumulated across millennia by indigenous cultures of Central America and the Caribbean — preserved through wildcrafted, shade-dried plants sourced directly from the landscapes where they have always grown.
      </p>
      <p class="mt-4 font-[family-name:var(--font-body)] text-[15px] leading-[1.85] text-[#333]/70">
        Honduras sits at a unique ecological crossroads. Cloud forests, tropical lowlands, river corridors, and coastal ecosystems converge here to create extraordinary botanical diversity. The plants in this collection have never been treated as commodities — they are integral to cultural identity, daily life, and ancestral practice.
      </p>
    </div>
  </section>

  {/* ═══════════════════════════════════════════════════════════════
      ORIGIN — Split layout with image + metadata
  ═══════════════════════════════════════════════════════════════ */}
  <section class="py-24" style="background-color: color-mix(in srgb, #E6D8B1 10%, #F8F8F0);">
    <div class="mx-auto grid max-w-7xl grid-cols-1 items-center gap-16 px-6 lg:grid-cols-2 lg:px-12">
      <div class="relative aspect-[4/5] overflow-hidden rounded-[2px]">
        <img
          src="https://cdn.forestal-mt.com/pages/traditional-herbs/origin.jpg"
          alt="Wildcrafted herbs drying in shade in Olancho, Honduras"
          class="h-full w-full object-cover"
          loading="lazy"
        />
        <div class="absolute inset-0 ring-1 ring-inset ring-[#F3C00D]/10 rounded-[2px]"></div>
      </div>

      <div>
        <p class="font-[family-name:var(--font-heading)] text-[11px] font-normal uppercase tracking-[0.35em] text-[#A18500]">
          Rooted in Place and Practice
        </p>
        <h2 class="mt-4 font-[family-name:var(--font-display)] text-[clamp(1.75rem,3.5vw,2.5rem)] font-normal text-[#333]">
          Heritage Rooted<br />in the Landscape
        </h2>
        <hr class="gold-rule-left" />
        <p class="mt-8 font-[family-name:var(--font-body)] text-[15px] leading-[1.85] text-[#333]/70">
          Forestal MT's Traditional Herbs Collection reflects the wisdom of healers, midwives, herbalists, and indigenous knowledge keepers who have stewarded this botanical understanding for centuries. Every herb carries a verifiable connection to its native ecosystem.
        </p>
        <p class="mt-4 font-[family-name:var(--font-body)] text-[15px] leading-[1.85] text-[#333]/70">
          By working directly with local harvesters in Olancho and La Mosquitia, we help preserve both botanical diversity and the cultural heritage that has protected it for generations.
        </p>

        {/* Origin metadata */}
        <div class="mt-10 grid grid-cols-2 gap-4">
          {Object.entries(origin).map(([key, value]) => (
            <div class="border-l-[2px] border-[#F3C00D]/30 pl-4">
              <p class="font-[family-name:var(--font-heading)] text-[9px] font-normal uppercase tracking-[0.2em] text-[#A18500]">
                {key.replace(/([A-Z])/g, ' $1').trim()}
              </p>
              <p class="mt-1 font-[family-name:var(--font-body)] text-[13px] text-[#333]/70">
                {value}
              </p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  {/* ═══════════════════════════════════════════════════════════════
      PROCESS — How We Work: Wildcrafted and Shade-Dried (dark)
  ═══════════════════════════════════════════════════════════════ */}
  <section class="grain relative overflow-hidden bg-[#1a1a1a] py-24">
    <div class="relative z-10 mx-auto max-w-7xl px-6 lg:px-12">
      <div class="text-center">
        <p class="font-[family-name:var(--font-heading)] text-[11px] font-normal uppercase tracking-[0.35em] text-[#F3C00D]/80">
          Origin-Grounded Process
        </p>
        <h2 class="mt-4 font-[family-name:var(--font-display)] text-[clamp(1.75rem,3.5vw,2.5rem)] font-normal text-white">
          How We Work: Wildcrafted<br />and Shade-Dried
        </h2>
        <hr class="gold-rule" />
      </div>

      <div class="mt-16 grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4">
        {processes.map((step) => (
          <div class="border border-white/10 bg-white/[0.03] p-10 backdrop-blur-sm">
            <span class="font-[family-name:var(--font-heading)] text-[13px] text-[#F3C00D]/40">
              {step.number}
            </span>
            <h3 class="mt-3 font-[family-name:var(--font-heading)] text-[1.05rem] font-normal tracking-wide text-white">
              {step.title}
            </h3>
            <div class="mt-3 h-px w-8 bg-[#F3C00D]/20"></div>
            <p class="mt-5 font-[family-name:var(--font-body)] text-[13px] leading-[1.85] text-white/50">
              {step.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  {/* ═══════════════════════════════════════════════════════════════
      HERB GRID — 41 herbs, compact scannable grid
  ═══════════════════════════════════════════════════════════════ */}
  <section class="bg-[#F8F8F0] py-24">
    <div class="mx-auto max-w-7xl px-6 lg:px-12">
      <div class="text-center">
        <p class="font-[family-name:var(--font-heading)] text-[11px] font-normal uppercase tracking-[0.35em] text-[#A18500]">
          41 Varieties, All Wildcrafted in Honduras
        </p>
        <h2 class="mt-4 font-[family-name:var(--font-display)] text-[clamp(1.75rem,3.5vw,2.5rem)] font-normal text-[#333]">
          Our Herbs
        </h2>
        <hr class="gold-rule" />
        <p class="mx-auto mt-6 max-w-2xl font-[family-name:var(--font-body)] text-[14px] leading-relaxed text-[#333]/55">
          Each herb carries its local name, its traditional context, and the care of the people who gathered it.
        </p>
      </div>

      <div class="mt-16 grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-4">
        {herbs.map((herb) => (
          <div class="border-l-[2px] border-[#F3C00D]/30 bg-white p-5 shadow-[0_1px_2px_rgba(0,0,0,0.03)]">
            <h3 class="font-[family-name:var(--font-heading)] text-[0.9rem] font-normal text-[#333]">
              {herb.name}
            </h3>
            {herb.localName && (
              <p class="mt-0.5 font-[family-name:var(--font-body)] text-[12px] italic text-[#333]/45">
                {herb.localName}
              </p>
            )}
            <p class="mt-1 font-[family-name:var(--font-ui)] text-[10px] font-semibold uppercase tracking-[0.1em] text-[#A18500]">
              {herb.sku}
            </p>
            <p class="mt-2 font-[family-name:var(--font-body)] text-[12px] leading-[1.7] text-[#333]/55">
              {herb.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  {/* ═══════════════════════════════════════════════════════════════
      FORMATS — Available formats as horizontal tags
  ═══════════════════════════════════════════════════════════════ */}
  <section class="py-24" style="background-color: color-mix(in srgb, #E6D8B1 10%, #F8F8F0);">
    <div class="mx-auto max-w-4xl px-6 text-center lg:px-12">
      <p class="font-[family-name:var(--font-heading)] text-[11px] font-normal uppercase tracking-[0.35em] text-[#A18500]">
        Prepared for Traditional and Commercial Use
      </p>
      <h2 class="mt-4 font-[family-name:var(--font-display)] text-[clamp(1.75rem,3.5vw,2.5rem)] font-normal text-[#333]">
        Available Formats
      </h2>
      <hr class="gold-rule" />
      <p class="mx-auto mt-6 max-w-xl font-[family-name:var(--font-body)] text-[14px] leading-relaxed text-[#333]/60">
        These formats support traditional herbal preparations, botanical product development, and specialty retail.
      </p>

      <div class="mt-12 flex flex-wrap justify-center gap-4">
        {formats.map((format) => (
          <span class="rounded-[2px] border border-[#206D03]/15 bg-white px-6 py-3 font-[family-name:var(--font-heading)] text-[13px] tracking-wide text-[#333]/70 shadow-[0_1px_2px_rgba(0,0,0,0.03)]">
            {format}
          </span>
        ))}
      </div>
    </div>
  </section>

  {/* ═══════════════════════════════════════════════════════════════
      SUSTAINABILITY — Protecting What We Harvest (dark)
  ═══════════════════════════════════════════════════════════════ */}
  <section class="grain relative overflow-hidden bg-[#1a1a1a] py-24">
    <div class="relative z-10 mx-auto max-w-4xl px-6 text-center lg:px-12">
      <p class="font-[family-name:var(--font-heading)] text-[11px] font-normal uppercase tracking-[0.35em] text-[#F3C00D]/80">
        Stewardship at Every Step
      </p>
      <h2 class="mt-6 font-[family-name:var(--font-display)] text-[clamp(1.75rem,4vw,2.75rem)] font-normal leading-[1.15] text-white">
        Protecting What<br />We Harvest
      </h2>
      <hr class="gold-rule" />
      <p class="mx-auto mt-8 max-w-2xl font-[family-name:var(--font-body)] text-[15px] leading-[1.85] text-white/50">
        As ecosystem pressures grow across Central America, Forestal MT promotes stewardship through every step of our work. This collection highlights Honduras' extraordinary ethnobotanical wealth — and the traditions that protect it.
      </p>
    </div>

    <div class="relative z-10 mx-auto mt-16 grid max-w-7xl grid-cols-1 gap-6 px-6 sm:grid-cols-2 lg:grid-cols-4 lg:px-12">
      {sustainability.map((item) => (
        <div class="border border-white/10 bg-white/[0.03] p-8 backdrop-blur-sm">
          <h3 class="font-[family-name:var(--font-heading)] text-[0.95rem] font-normal tracking-wide text-white">
            {item.title}
          </h3>
          <div class="mt-3 h-px w-8 bg-[#F3C00D]/20"></div>
          <p class="mt-4 font-[family-name:var(--font-body)] text-[13px] leading-[1.85] text-white/45">
            {item.description}
          </p>
        </div>
      ))}
    </div>
  </section>

  {/* ═══════════════════════════════════════════════════════════════
      AUDIENCE + WHOLESALE CTA
  ═══════════════════════════════════════════════════════════════ */}
  <section class="bg-[#F8F8F0] py-24">
    <div class="mx-auto max-w-7xl px-6 lg:px-12">
      <div class="grid grid-cols-1 gap-16 lg:grid-cols-2">
        {/* Audience */}
        <div>
          <p class="font-[family-name:var(--font-heading)] text-[11px] font-normal uppercase tracking-[0.35em] text-[#A18500]">
            Who This Collection Serves
          </p>
          <h2 class="mt-4 font-[family-name:var(--font-display)] text-[clamp(1.5rem,3vw,2rem)] font-normal text-[#333]">
            Built for Brands<br />That Value Origin
          </h2>
          <hr class="gold-rule-left" />
          <ul class="mt-8 space-y-3">
            {audience.map((item) => (
              <li class="flex items-center gap-3 font-[family-name:var(--font-body)] text-[14px] text-[#333]/70">
                <span class="h-px w-4 bg-[#F3C00D]/40" />
                {item}
              </li>
            ))}
          </ul>
