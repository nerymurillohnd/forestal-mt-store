import { getEntry } from "astro:content";

const page = await getEntry("pages", "traditional-herbs");
if (!page) throw new Error("Missing content: pages/traditional-herbs");
const { data } = page;

const herbs = [
  { name: "Gumbo Limbo Leaves", localName: "Mulato, Indio Desnudo", sku: "FMT-TH-AL", description: "Shade-dried leaves traditionally used in tea and wellness rituals from Central American folk herbalism." },
