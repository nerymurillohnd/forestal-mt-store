---
/**
 * CONTACT — Landing Page
 * Direct contact, form, business hours, social, FAQs, collections nav.
 * MDX content as DATA — not rendered as prose.
 */
import BaseLayout from "../../layouts/BaseLayout.astro";
import Head from "../../components/Head.astro";
import Breadcrumb from "../../components/Breadcrumb.astro";
import Hero from "../../components/Hero.astro";
import SectionHeader from "../../components/SectionHeader.astro";
import GoldTopCard from "../../components/GoldTopCard.astro";
import CollectionNav from "../../components/CollectionNav.astro";
import TrustMarquee from "../../components/TrustMarquee.astro";
import { getEntry } from "astro:content";

const page = await getEntry("pages", "contact");
if (!page) throw new Error("Missing content: pages/contact");
const { data } = page;

const contactCards = [
  {
    icon: "email",
    title: "Email",
    lines: [
      {
        label: "Sales & Wholesale",
        value: "sales@forestal-mt.com",
        href: "mailto:sales@forestal-mt.com",
      },
      {
        label: "Customer Support",
        value: "support@forestal-mt.com",
        href: "mailto:support@forestal-mt.com",
      },
    ],
  },
  {
    icon: "whatsapp",
    title: "WhatsApp",
    lines: [{ label: "Text or Call", value: "+504 9699 7635", href: "https://wa.me/50496997635" }],
  },
  {
    icon: "address",
    title: "Business Address",
    lines: [
      {
        label: "Forestal Murillo Tejada S. de R.L.",
        value: "Barrio Arriba, San Francisco de la Paz, Olancho, Honduras 16102",
        href: null,
      },
    ],
  },
];

const subjectOptions = [
  "General Inquiry",
  "Product Question",
  "Wholesale Inquiry",
  "Order Support",
  "Partnership",
  "Documentation Request",
  "Other",
];

const socials = [
  { name: "Facebook", url: "https://facebook.com/forestalmt.hn", handle: "@forestalmt.hn" },
  { name: "Instagram", url: "https://instagram.com/forestalmt.hn", handle: "@forestalmt.hn" },
  { name: "TikTok", url: "https://tiktok.com/@forestalmt.hn", handle: "@forestalmt.hn" },
  { name: "LinkedIn", url: "https://linkedin.com/company/forestalmt", handle: "Forestal MT" },
];

const faqs = [
  {
    question: "What are your typical response times?",
    answer:
      "Most inquiries receive a reply within 1-2 business days. Time-sensitive cases move faster when phone or WhatsApp details are included.",
  },
  {
    question: "How should I contact you for wholesale or bulk orders?",
    answer:
      "Email sales@forestal-mt.com or WhatsApp +504 9699 7635 with products of interest, approximate volumes, destination country, and needed documentation. See our Wholesale Program for detailed MOQs and pricing tiers.",
  },
  {
    question: "Do you provide live chat support?",
    answer:
      "Primary channels are email, WhatsApp, and phone. For real-time communication, WhatsApp at +504 9699 7635 is the fastest route during business hours.",
  },
  {
    question: "How do shipping and delivery work?",
    answer:
      "Typical shipments go via DHL Express under DAP terms (3-7 business days). Maritime freight options are available for large volumes upon negotiation.",
  },
  {
    question: "Can I speak with someone directly?",
    answer:
      "Yes. Call during business hours Monday-Friday 9:00 AM - 4:00 PM (Honduras Time / CST), or email sales@forestal-mt.com with your preferred date, time, and topic to schedule a call.",
  },
];
---

<BaseLayout>
  <Head
    slot="head"
    title={data.title}
    description={data.description}
    canonicalUrl={data.canonicalUrl}
    pageName={data.pageName}
    og={data.og}
    twitter={data.twitter}
    schemas={data.schemas}
  />

  {
    /* ═══════════════════════════════════════════════════════════════
      HERO — Hero component
  ═══════════════════════════════════════════════════════════════ */
  }
  <Hero
    background={data.hero.background}
    eyebrow={data.hero.eyebrow}
    title={data.hero.title}
    subtitle={data.hero.subtitle}
    description={data.hero.description}
    ctas={data.hero.ctas}
  />

  <Breadcrumb pageName={data.pageName} />

  {
    /* ═══════════════════════════════════════════════════════════════
      CONTACT INFO CARDS — 3 cards on surface-warm
  ═══════════════════════════════════════════════════════════════ */
  }
  <section class="surface-warm py-24">
    <div class="mx-auto max-w-7xl px-6 lg:px-12">
      <SectionHeader eyebrow="Direct Contact" heading="How to Reach Us" />

      <div class="stagger-children mt-16 grid grid-cols-1 gap-6 md:grid-cols-3">
        {
          contactCards.map((card) => (
            <div class="card-hover border-t-[3px] border-[#F3C00D]/50 bg-white p-8 shadow-[0_1px_3px_rgba(0,0,0,0.04)]">
              {/* Icon area */}
              <div class="flex h-10 w-10 items-center justify-center rounded-full bg-[#206D03]/[0.08]">
                {card.icon === "email" && (
                  <svg
                    class="h-5 w-5 text-[#206D03]"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                    stroke-width="1.5"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75"
                    />
                  </svg>
                )}
                {card.icon === "whatsapp" && (
                  <svg class="h-5 w-5 text-[#206D03]" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 0 1-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 0 1-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 0 1 2.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0 0 12.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 0 0 5.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 0 0-3.48-8.413z" />
                  </svg>
                )}
                {card.icon === "address" && (
                  <svg
                    class="h-5 w-5 text-[#206D03]"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                    stroke-width="1.5"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"
                    />
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z"
                    />
                  </svg>
                )}
              </div>

              <h3 class="mt-5 font-[family-name:var(--font-heading)] text-[1rem] font-normal text-[#333]">
                {card.title}
              </h3>
              <div class="mt-3 h-px w-8 bg-[#F3C00D]/30" />
              <div class="mt-4 space-y-3">
                {card.lines.map((line) => (
                  <div>
                    <p class="font-[family-name:var(--font-heading)] text-[9px] font-normal uppercase tracking-[0.2em] text-[#A18500]">
                      {line.label}
                    </p>
                    {line.href ? (
                      <a
                        href={line.href}
                        class="mt-0.5 block font-[family-name:var(--font-body)] text-[14px] text-[#206D03] transition-colors hover:text-[#54B006]"
                      >
                        {line.value}
                      </a>
                    ) : (
                      <p class="mt-0.5 font-[family-name:var(--font-body)] text-[13px] leading-relaxed text-[#333]/70">
                        {line.value}
                      </p>
                    )}
                  </div>
                ))}
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  {
    /* ═══════════════════════════════════════════════════════════════
      TRUST MARQUEE — Between contact cards and form
  ═══════════════════════════════════════════════════════════════ */
  }
  <TrustMarquee />

  {
    /* ═══════════════════════════════════════════════════════════════
      CONTACT FORM — Parchment background, centered
  ═══════════════════════════════════════════════════════════════ */
  }
  <section class="surface-parchment py-24">
    <div class="mx-auto max-w-2xl px-6 lg:px-12">
      <SectionHeader eyebrow="Send Us a Message" heading="Start a Conversation" />
      <p
        class="mt-6 text-center font-[family-name:var(--font-body)] text-[15px] leading-[1.85] text-[#333]/70"
      >
        Share your project, questions, or requirements. We aim to respond within 1-2 business days.
      </p>

      <form id="contact-form" class="mt-12 space-y-6" onsubmit="return false;">
        {/* Name */}
        <div>
          <label
            for="name"
            class="block font-[family-name:var(--font-ui)] text-[12px] font-semibold uppercase tracking-[0.1em] text-[#333]"
          >
            Name <span class="text-[#A18500]">*</span>
          </label>
          <input
            type="text"
            id="name"
            name="name"
            required
            autocomplete="name"
            class="mt-2 w-full rounded-[3px] border border-[#D6E8D3] bg-white px-4 py-3 font-[family-name:var(--font-ui)] text-[14px] text-[#333] outline-none transition-colors focus:border-[#206D03] focus:ring-1 focus:ring-[#206D03]/20"
            placeholder="Your full name"
          />
        </div>

        {/* Email */}
        <div>
          <label
            for="email"
            class="block font-[family-name:var(--font-ui)] text-[12px] font-semibold uppercase tracking-[0.1em] text-[#333]"
          >
            Email <span class="text-[#A18500]">*</span>
          </label>
          <input
            type="email"
            id="email"
            name="email"
            required
            autocomplete="email"
            class="mt-2 w-full rounded-[3px] border border-[#D6E8D3] bg-white px-4 py-3 font-[family-name:var(--font-ui)] text-[14px] text-[#333] outline-none transition-colors focus:border-[#206D03] focus:ring-1 focus:ring-[#206D03]/20"
            placeholder="you@company.com"
          />
        </div>

        {/* Phone / WhatsApp */}
        <div>
          <label
            for="phone"
            class="block font-[family-name:var(--font-ui)] text-[12px] font-semibold uppercase tracking-[0.1em] text-[#333]"
          >
            Phone / WhatsApp <span class="text-[#333]/40 normal-case tracking-normal"
              >(optional)</span
            >
          </label>
          <input
            type="tel"
            id="phone"
            name="phone"
            autocomplete="tel"
            class="mt-2 w-full rounded-[3px] border border-[#D6E8D3] bg-white px-4 py-3 font-[family-name:var(--font-ui)] text-[14px] text-[#333] outline-none transition-colors focus:border-[#206D03] focus:ring-1 focus:ring-[#206D03]/20"
            placeholder="+1 (555) 000-0000"
          />
        </div>

        {/* Subject */}
        <div>
          <label
            for="subject"
            class="block font-[family-name:var(--font-ui)] text-[12px] font-semibold uppercase tracking-[0.1em] text-[#333]"
          >
            Subject <span class="text-[#A18500]">*</span>
          </label>
          <select
            id="subject"
            name="subject"
            required
            autocomplete="off"
            class="mt-2 w-full rounded-[3px] border border-[#D6E8D3] bg-white px-4 py-3 font-[family-name:var(--font-ui)] text-[14px] text-[#333] outline-none transition-colors focus:border-[#206D03] focus:ring-1 focus:ring-[#206D03]/20"
          >
            <option value="" disabled selected>Select an inquiry type</option>
            {subjectOptions.map((opt) => <option value={opt}>{opt}</option>)}
          </select>
        </div>

        {/* Message */}
        <div>
          <label
            for="message"
            class="block font-[family-name:var(--font-ui)] text-[12px] font-semibold uppercase tracking-[0.1em] text-[#333]"
          >
            Message <span class="text-[#A18500]">*</span>
          </label>
          <textarea
            id="message"
            name="message"
            required
            rows={6}
            autocomplete="off"
            class="mt-2 w-full resize-y rounded-[3px] border border-[#D6E8D3] bg-white px-4 py-3 font-[family-name:var(--font-ui)] text-[14px] text-[#333] outline-none transition-colors focus:border-[#206D03] focus:ring-1 focus:ring-[#206D03]/20"
            placeholder="Describe your project, questions, or requirements. Include brand name, target market, products of interest, volumes, and timeline if applicable."
          ></textarea>
        </div>

        {/* Submit */}
        <button
          type="submit"
          id="submit-btn"
          name="submit"
          class="w-full rounded-[3px] bg-[#206D03] px-8 py-3.5 font-[family-name:var(--font-ui)] text-[13px] font-semibold tracking-wide text-white transition-all duration-300 hover:bg-[#54B006] hover:shadow-lg hover:shadow-[#206D03]/25"
        >
          Send Message
        </button>
      </form>
    </div>
  </section>

  {
    /* ═══════════════════════════════════════════════════════════════
      BUSINESS HOURS — Centered text on surface-warm
  ═══════════════════════════════════════════════════════════════ */
  }
  <section class="surface-warm py-24">
    <div class="reveal-on-scroll mx-auto max-w-2xl px-6 text-center lg:px-12">
      <SectionHeader eyebrow="Availability" heading="Business Hours" />

      <div class="mt-10 space-y-4">
        <div class="flex items-center justify-center gap-6">
          <span
            class="w-28 text-right font-[family-name:var(--font-ui)] text-[13px] font-semibold text-[#333]"
            >Mon - Fri</span
          >
          <span class="font-[family-name:var(--font-body)] text-[14px] text-[#333]/70"
            >8:00 AM - 5:00 PM</span
          >
        </div>
        <div class="flex items-center justify-center gap-6">
          <span
            class="w-28 text-right font-[family-name:var(--font-ui)] text-[13px] font-semibold text-[#333]"
            >Saturday</span
          >
          <span class="font-[family-name:var(--font-body)] text-[14px] text-[#333]/70"
            >8:00 AM - 12:00 PM</span
          >
        </div>
        <div class="flex items-center justify-center gap-6">
          <span
            class="w-28 text-right font-[family-name:var(--font-ui)] text-[13px] font-semibold text-[#333]"
            >Sunday</span
          >
          <span class="font-[family-name:var(--font-body)] text-[14px] text-[#333]/70">Closed</span>
        </div>
      </div>

      <p class="mt-6 font-[family-name:var(--font-body)] text-[12px] italic text-[#333]/45">
        Honduras Time (CST / UTC-6). Response times may vary during Honduran public holidays.
      </p>
    </div>
  </section>

  {
    /* ═══════════════════════════════════════════════════════════════
      SOCIAL MEDIA — Dark section, horizontal links
  ═══════════════════════════════════════════════════════════════ */
  }
  <section class="surface-dark grain relative overflow-hidden py-24">
    <div class="reveal-on-scroll relative z-10 mx-auto max-w-4xl px-6 text-center lg:px-12">
      <SectionHeader eyebrow="Follow Our Journey" heading="Connect With Us" variant="dark" />

      <div class="mt-12 flex flex-wrap items-center justify-center gap-8">
        {
          socials.map((social) => (
            <a
              href={social.url}
              target="_blank"
              rel="noopener noreferrer"
              class="group flex flex-col items-center gap-2 transition-all duration-300"
            >
              <span class="font-[family-name:var(--font-heading)] text-[1rem] font-normal text-white transition-colors group-hover:text-[#F3C00D]">
                {social.name}
              </span>
              <span class="font-[family-name:var(--font-ui)] text-[11px] text-white/40 transition-colors group-hover:text-white/60">
                {social.handle}
              </span>
            </a>
          ))
        }
      </div>
    </div>
  </section>

  {
    /* ═══════════════════════════════════════════════════════════════
      FAQ SECTION — GoldTopCard Q&A pairs on surface-warm
  ═══════════════════════════════════════════════════════════════ */
  }
  <section class="surface-warm py-24">
    <div class="mx-auto max-w-3xl px-6 lg:px-12">
      <SectionHeader eyebrow="Common Questions" heading="Contact FAQs" />

      <div class="stagger-children mt-16 space-y-6">
        {faqs.map((faq) => <GoldTopCard heading={faq.question} body={faq.answer} />)}
      </div>
    </div>
  </section>

  {
    /* ═══════════════════════════════════════════════════════════════
      COLLECTIONS NAV — All collections including wholesale
  ═══════════════════════════════════════════════════════════════ */
  }
  <CollectionNav />
</BaseLayout>
