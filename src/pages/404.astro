---
import BaseLayout from "../layouts/BaseLayout.astro";

const title = "Page Not Found";
const description = "The page you're looking for doesn't exist or has been moved.";
---

<BaseLayout>
  <Fragment slot="head">
    <title>{title} | Forestal MT</title>
    <meta name="description" content={description} />
    <meta name="robots" content="noindex, nofollow" />
  </Fragment>

  <section class="flex min-h-[60vh] items-center justify-center px-4 text-center">
    <div>
      <p class="font-[family-name:var(--font-heading)] text-6xl font-bold text-leaf-green">404</p>
      <h1 class="mt-4 font-[family-name:var(--font-heading)] text-2xl font-semibold text-graphite">
        {title}
      </h1>
      <p class="mt-3 max-w-md font-[family-name:var(--font-body)] text-graphite/70">
        {description}
      </p>
      <div class="mt-8 flex justify-center gap-4">
        <a
          href="/"
          class="inline-block rounded-lg bg-leaf-green px-6 py-3 font-[family-name:var(--font-ui)] text-sm font-semibold text-white transition-colors hover:bg-grass-green"
        >
          Go Home
        </a>
        <a
          href="/contact/"
          class="inline-block rounded-lg border border-leaf-green px-6 py-3 font-[family-name:var(--font-ui)] text-sm font-semibold text-leaf-green transition-colors hover:bg-leaf-green hover:text-white"
        >
          Contact Us
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
