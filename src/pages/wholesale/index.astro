---
/**
 * WHOLESALE — Landing Page
 * Partner with the source. Collections, process, shipping, private label, pricing, form.
 * MDX content as DATA — not rendered as prose.
 */
import BaseLayout from "../../layouts/BaseLayout.astro";
import Head from "../../components/Head.astro";
import Breadcrumb from "../../components/Breadcrumb.astro";
import { getEntry } from "astro:content";

const page = await getEntry("pages", "wholesale");
if (!page) throw new Error("Missing content: pages/wholesale");
const { data } = page;

const collections = [
  {
    title: "Batana Oil",
    eyebrow: "Ancestral Miskito Elixir",
    description: "Wild-harvested Elaeis oleifera kernel oil from La Mosquitia. Pure, unrefined, and crafted through ancestral Miskito methods. Ideal for high-end personal care and treatment-focused product lines.",
    href: "/batana-oil/",
    image: "https://cdn.forestal-mt.com/pages/batana-oil/hero.jpg",
  },
  {
    title: "Stingless Bee Honey",
    eyebrow: "The Maya Heritage",
    description: "Raw and unfiltered honey from Tetragonisca angustula (Jimerito). Harvested from traditional log hives in native forests. Suitable for wellness brands and heritage-driven honey offerings.",
    href: "/stingless-bee-honey/",
    image: "https://cdn.forestal-mt.com/pages/stingless-bee-honey/hero.jpg",
  },
  {
    title: "Traditional Herbs",
    eyebrow: "Sacred Wisdom Rooted in Nature",
    description: "41 wildcrafted botanical varieties from Honduran cloud forests, lowlands, and coastal ecosystems. Shade-dried to preserve natural color, aroma, and plant integrity.",
    href: "/traditional-herbs/",
    image: "https://cdn.forestal-mt.com/pages/traditional-herbs/hero.jpg",
  },
];

const processSteps = [
  {
    number: "01",
    title: "Wild Harvest",
    description: "Botanicals sourced in native ecosystems by indigenous artisans and community partners — gathered where they have always grown.",
  },
  {
    number: "02",
    title: "Ancestral Processing",
    description: "Traditional, origin-based methods maintain natural integrity without industrial shortcuts. The same care that has defined these products for generations.",
  },
  {
    number: "03",
    title: "Origin Verification",
    description: "Documentation linking each material to its harvesting ecosystem and community. You know where it came from, who gathered it, and how it was processed.",
  },
  {
    number: "04",
    title: "Export Preparation",
    description: "Packaging, labeling, and customs documentation completed at origin for compliant international shipment.",
  },
  {
    number: "05",
    title: "Direct Delivery",
    description: "Export without intermediaries, preserving complete traceability from forest to your facility.",
  },
];

const shippingOptions = [
  {
    title: "DHL Express",
    tag: "DAP Terms",
    details: [
      "Global express delivery with full tracking",
      "Duties and taxes paid by the buyer at destination",
      "Ideal for retail-ready, wholesale, and mid-volume orders",
      "Typical delivery: 3-7 business days",
    ],
  },
  {
    title: "Maritime Freight",
    tag: "Bulk Volume",
    details: [
      "Suitable for pallets and containers",
      "Optimized for cost efficiency on large volumes",
      "Export documentation completed by Forestal MT",
      "Delivery times vary by destination",
    ],
  },
];

const privateLabelBenefits = [
  "Pure, origin-verified botanicals ready for your branding",
  "Flexible order sizes from small batch to large volume",
  "Bulk or retail-ready packaging formats",
  "Full documentation package included",
  "Support with regulatory paperwork for your market",
];

const pricingFactors = [
  "Product type and collection",
  "Volume ordered",
  "Packaging format",
  "Shipping method",
  "Destination country",
];
---

<BaseLayout>
  <Head
    slot="head"
    title={data.title}
    description={data.description}
    canonicalUrl={data.canonicalUrl}
    pageName={data.pageName}
    og={data.og}
    twitter={data.twitter}
    schemas={data.schemas}
  />

  {/* ═══════════════════════════════════════════════════════════════
      HERO — Image background, 60vh, bottom-aligned
  ═══════════════════════════════════════════════════════════════ */}
  <section class="grain relative flex min-h-[60vh] items-end overflow-hidden">
    <div class="absolute inset-0">
      <img
        src={data.hero.background.url}
        alt={data.hero.background.alt}
        class="h-full w-full object-cover"
        loading="eager"
        decoding="async"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-[#111]/90 via-[#111]/40 to-[#111]/15"></div>
    </div>

    <div class="relative z-10 mx-auto w-full max-w-7xl px-6 pb-20 lg:px-12">
      <p class="font-[family-name:var(--font-heading)] text-[11px] font-normal uppercase tracking-[0.35em] text-[#F3C00D]/90">
        {data.hero.eyebrow}
      </p>
      <h1 class="mt-4 max-w-3xl font-[family-name:var(--font-display)] text-[clamp(2.5rem,5.5vw,4rem)] font-normal leading-[1.08] text-white"
        set:html={data.hero.title.replace(/\n/g, "<br />")}
      />
      <p class="mt-2 font-[family-name:var(--font-heading)] text-[11px] font-normal uppercase tracking-[0.2em] text-white/50">
        {data.hero.subtitle}
      </p>
      <div class="mt-5 h-px w-20 bg-gradient-to-r from-[#F3C00D]/70 to-transparent"></div>
      <p class="mt-5 max-w-xl font-[family-name:var(--font-body)] text-[15px] leading-relaxed text-white/65">
        {data.hero.description}
      </p>
      <div class="mt-8 flex flex-wrap gap-4">
        {data.hero.ctas?.map((cta: { label: string; url: string }, i: number) => (
          <a
            href={cta.url}
            class:list={[
              "inline-block rounded-[3px] px-7 py-3 font-[family-name:var(--font-ui)] text-[13px] font-semibold tracking-wide transition-all duration-300",
              i === 0
                ? "bg-[#206D03] text-white hover:bg-[#54B006]"
                : "border border-white/25 text-white/90 hover:border-white/50 hover:bg-white/5",
            ]}
          >
            {cta.label}
          </a>
        ))}
      </div>
    </div>
  </section>

  <Breadcrumb pageName={data.pageName} />

  {/* ═══════════════════════════════════════════════════════════════
      INTRO — "Partner With the Source" centered narrative
  ═══════════════════════════════════════════════════════════════ */}
  <section class="bg-[#F8F8F0] py-24">
    <div class="mx-auto max-w-3xl px-6 text-center lg:px-12">
      <p class="font-[family-name:var(--font-heading)] text-[11px] font-normal uppercase tracking-[0.35em] text-[#A18500]">
        Direct From Origin
      </p>
      <h2 class="mt-4 font-[family-name:var(--font-display)] text-[clamp(1.75rem,3.5vw,2.5rem)] font-normal text-[#333]">
        Partner With the Source
      </h2>
      <hr class="gold-rule" />
      <p class="mt-8 font-[family-name:var(--font-body)] text-[15px] leading-[1.85] text-[#333]/70">
        Forestal MT offers wholesale and bulk ethnobotanical supply directly from Honduras for brands, formulators, and distributors who require origin-true ingredients and reliable export workflows. From Batana Oil to stingless bee honey and traditional herbs, every shipment is anchored in traceable origin, cultural stewardship, and verifiable quality.
      </p>
      <p class="mt-4 font-[family-name:var(--font-body)] text-[15px] leading-[1.85] text-[#333]/70">
        Whether you're a startup building your first product line, a small business expanding into natural ingredients, or an international distributor sourcing at scale — we supply directly, with clear origin information and all the documentation you need for smooth global shipping.
      </p>
    </div>
  </section>

  {/* ═══════════════════════════════════════════════════════════════
      COLLECTIONS PREVIEW — 3 mini-cards with image
  ═══════════════════════════════════════════════════════════════ */}
  <section class="py-24" style="background-color: color-mix(in srgb, #E6D8B1 10%, #F8F8F0);">
    <div class="mx-auto max-w-7xl px-6 lg:px-12">
      <div class="text-center">
        <p class="font-[family-name:var(--font-heading)] text-[11px] font-normal uppercase tracking-[0.35em] text-[#A18500]">
          Our Wholesale Collections
        </p>
        <h2 class="mt-4 font-[family-name:var(--font-display)] text-[clamp(1.75rem,3.5vw,2.5rem)] font-normal text-[#333]">
          Three Collections, One Origin
        </h2>
        <hr class="gold-rule" />
      </div>

      <div class="mt-16 grid grid-cols-1 gap-6 md:grid-cols-3">
        {collections.map((col) => (
          <a href={col.href} class="group overflow-hidden bg-white shadow-[0_1px_3px_rgba(0,0,0,0.04)] transition-shadow duration-300 hover:shadow-md">
            <div class="relative aspect-[16/9] overflow-hidden">
              <img
                src={col.image}
                alt={col.title}
                class="h-full w-full object-cover transition-transform duration-700 ease-out group-hover:scale-[1.03]"
                loading="lazy"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-[#111]/50 to-transparent"></div>
            </div>
            <div class="border-t-[3px] border-[#F3C00D]/50 p-8">
              <p class="font-[family-name:var(--font-heading)] text-[9px] font-normal uppercase tracking-[0.35em] text-[#A18500]">
                {col.eyebrow}
              </p>
              <h3 class="mt-2 font-[family-name:var(--font-heading)] text-[1.05rem] font-normal text-[#333]">
                {col.title}
              </h3>
              <div class="mt-3 h-px w-8 bg-[#F3C00D]/30"></div>
              <p class="mt-4 font-[family-name:var(--font-body)] text-[13px] leading-[1.85] text-[#333]/60">
                {col.description}
              </p>
              <span class="mt-5 inline-flex items-center gap-1.5 font-[family-name:var(--font-ui)] text-[11px] font-semibold uppercase tracking-[0.15em] text-[#206D03] transition-colors group-hover:text-[#54B006]">
                Explore Collection
                <svg class="h-3 w-3 transition-transform duration-300 group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
                </svg>
              </span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  {/* ═══════════════════════════════════════════════════════════════
      FOREST-TO-CUSTOMER — 5 process steps on dark bg
  ═══════════════════════════════════════════════════════════════ */}
  <section class="grain relative overflow-hidden bg-[#1a1a1a] py-24">
    <div class="relative z-10 mx-auto max-w-7xl px-6 lg:px-12">
      <div class="text-center">
        <p class="font-[family-name:var(--font-heading)] text-[11px] font-normal uppercase tracking-[0.35em] text-[#F3C00D]/80">
          Origin-True System
        </p>
        <h2 class="mt-4 font-[family-name:var(--font-display)] text-[clamp(1.75rem,3.5vw,2.5rem)] font-normal text-white">
          Forest-to-Customer Authenticity
        </h2>
        <hr class="gold-rule" />
      </div>

      <div class="mt-16 grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-5">
        {processSteps.map((step) => (
          <div class="border border-white/10 bg-white/[0.03] p-8 backdrop-blur-sm">
            <span class="font-[family-name:var(--font-heading)] text-[1.75rem] font-normal text-[#F3C00D]/40">
              {step.number}
            </span>
            <h3 class="mt-3 font-[family-name:var(--font-heading)] text-[1rem] font-normal tracking-wide text-white">
              {step.title}
            </h3>
            <div class="mt-3 h-px w-8 bg-[#F3C00D]/20"></div>
            <p class="mt-4 font-[family-name:var(--font-body)] text-[13px] leading-[1.85] text-white/45">
              {step.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  {/* ═══════════════════════════════════════════════════════════════
      SHIPPING — 2 cards side by side on seasalt
  ═══════════════════════════════════════════════════════════════ */}
  <section class="bg-[#F8F8F0] py-24">
    <div class="mx-auto max-w-5xl px-6 lg:px-12">
      <div class="text-center">
        <p class="font-[family-name:var(--font-heading)] text-[11px] font-normal uppercase tracking-[0.35em] text-[#A18500]">
          Proven Global Export Operations
        </p>
        <h2 class="mt-4 font-[family-name:var(--font-display)] text-[clamp(1.75rem,3.5vw,2.5rem)] font-normal text-[#333]">
          Shipping Options
        </h2>
        <hr class="gold-rule" />
      </div>

      <div class="mt-16 grid grid-cols-1 gap-6 md:grid-cols-2">
        {shippingOptions.map((opt) => (
          <div class="border-t-[3px] border-[#F3C00D]/50 bg-white p-10 shadow-[0_1px_3px_rgba(0,0,0,0.04)] transition-shadow duration-300 hover:shadow-md">
            <p class="font-[family-name:var(--font-heading)] text-[9px] font-normal uppercase tracking-[0.3em] text-[#A18500]">
              {opt.tag}
            </p>
            <h3 class="mt-3 font-[family-name:var(--font-heading)] text-[1.05rem] font-normal tracking-wide text-[#333]">
              {opt.title}
            </h3>
            <div class="mt-3 h-px w-8 bg-[#F3C00D]/30"></div>
            <ul class="mt-5 space-y-3">
              {opt.details.map((detail) => (
                <li class="flex items-start gap-2.5 font-[family-name:var(--font-body)] text-[13px] leading-relaxed text-[#333]/65">
                  <span class="mt-1.5 h-1 w-1 shrink-0 rounded-full bg-[#206D03]/50" />
                  {detail}
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>

      <p class="mt-8 text-center font-[family-name:var(--font-body)] text-[13px] text-[#333]/60">
        Export documentation includes commercial invoices with HS codes, certificates of origin, export licenses, and COAs upon request.
      </p>
    </div>
  </section>

  {/* ═══════════════════════════════════════════════════════════════
      PRIVATE LABEL — Warm bg, "Your Brand, Our Botanicals"
  ═══════════════════════════════════════════════════════════════ */}
  <section class="py-24" style="background-color: color-mix(in srgb, #E6D8B1 10%, #F8F8F0);">
    <div class="mx-auto grid max-w-7xl grid-cols-1 items-center gap-16 px-6 lg:grid-cols-2 lg:px-12">
      <div>
        <p class="font-[family-name:var(--font-heading)] text-[11px] font-normal uppercase tracking-[0.35em] text-[#A18500]">
          Private Label
        </p>
        <h2 class="mt-4 font-[family-name:var(--font-display)] text-[clamp(1.75rem,3.5vw,2.5rem)] font-normal text-[#333]">
          Your Brand,<br />Our Botanicals
        </h2>
        <hr class="gold-rule-left" />
        <p class="mt-8 font-[family-name:var(--font-body)] text-[15px] leading-[1.85] text-[#333]/70">
          Forestal MT provides private-label-ready ethnobotanicals for brands seeking authentic, origin-based ingredients under their own label. We supply ready-to-brand product inputs sourced directly from Honduras.
        </p>

        <ul class="mt-8 space-y-3">
          {privateLabelBenefits.map((benefit) => (
            <li class="flex items-center gap-3 font-[family-name:var(--font-body)] text-[14px] text-[#333]/70">
              <span class="h-px w-4 bg-[#F3C00D]/40" />
              {benefit}
            </li>
          ))}
        </ul>
      </div>

      <div class="relative aspect-[4/5] overflow-hidden rounded-[2px]">
        <img
          src="https://cdn.forestal-mt.com/pages/wholesale/private-label.jpg"
          alt="Forestal MT private label packaging and branding solutions"
          class="h-full w-full object-cover"
          loading="lazy"
        />
        <div class="absolute inset-0 rounded-[2px] ring-1 ring-inset ring-[#F3C00D]/10"></div>
      </div>
    </div>
  </section>

  {/* ═══════════════════════════════════════════════════════════════
      PRICING — Brief section on seasalt
  ═══════════════════════════════════════════════════════════════ */}
  <section class="bg-[#F8F8F0] py-24">
    <div class="mx-auto max-w-3xl px-6 text-center lg:px-12">
      <p class="font-[family-name:var(--font-heading)] text-[11px] font-normal uppercase tracking-[0.35em] text-[#A18500]">
        Tailored to Your Needs
      </p>
      <h2 class="mt-4 font-[family-name:var(--font-display)] text-[clamp(1.75rem,3.5vw,2.5rem)] font-normal text-[#333]">
        Volume-Based Pricing
      </h2>
      <hr class="gold-rule" />
      <p class="mt-8 font-[family-name:var(--font-body)] text-[15px] leading-[1.85] text-[#333]/70">
        Wholesale pricing is customized based on your requirements. Request a quote and we will structure pricing to support your margins and growth strategy.
      </p>

      <div class="mx-auto mt-10 flex max-w-md flex-wrap justify-center gap-3">
        {pricingFactors.map((factor) => (
          <span class="rounded-[2px] border border-[#D6E8D3] bg-white px-4 py-2 font-[family-name:var(--font-ui)] text-[11px] text-[#333]/60">
            {factor}
          </span>
        ))}
      </div>
    </div>
  </section>

  {/* ═══════════════════════════════════════════════════════════════
      WHOLESALE INQUIRY FORM — Warm bg
  ═══════════════════════════════════════════════════════════════ */}
  <section class="py-24" style="background-color: color-mix(in srgb, #E6D8B1 10%, #F8F8F0);">
    <div class="mx-auto max-w-2xl px-6 lg:px-12">
      <div class="text-center">
        <p class="font-[family-name:var(--font-heading)] text-[11px] font-normal uppercase tracking-[0.35em] text-[#A18500]">
          Get Started
        </p>
        <h2 class="mt-4 font-[family-name:var(--font-display)] text-[clamp(1.75rem,3.5vw,2.5rem)] font-normal text-[#333]">
          Wholesale Inquiry
        </h2>
        <hr class="gold-rule" />
        <p class="mt-6 font-[family-name:var(--font-body)] text-[15px] leading-[1.85] text-[#333]/70">
          Share your details and we will respond with pricing, logistics options, and next steps.
        </p>
      </div>

      <form class="mt-12 space-y-6" onsubmit="return false;">
        {/* Name */}
        <div>
          <label for="ws-name" class="block font-[family-name:var(--font-ui)] text-[12px] font-semibold uppercase tracking-[0.1em] text-[#333]">
            Name <span class="text-[#A18500]">*</span>
          </label>
          <input
            type="text"
            id="ws-name"
            name="name"
            required
            class="mt-2 w-full rounded-[3px] border border-[#D6E8D3] bg-white px-4 py-3 font-[family-name:var(--font-ui)] text-[14px] text-[#333] outline-none transition-colors focus:border-[#206D03] focus:ring-1 focus:ring-[#206D03]/20"
            placeholder="Your full name"
          />
        </div>

        {/* Company */}
        <div>
          <label for="ws-company" class="block font-[family-name:var(--font-ui)] text-[12px] font-semibold uppercase tracking-[0.1em] text-[#333]">
            Company <span class="text-[#333]/40 normal-case tracking-normal">(optional)</span>
          </label>
          <input
            type="text"
            id="ws-company"
            name="company"
            class="mt-2 w-full rounded-[3px] border border-[#D6E8D3] bg-white px-4 py-3 font-[family-name:var(--font-ui)] text-[14px] text-[#333] outline-none transition-colors focus:border-[#206D03] focus:ring-1 focus:ring-[#206D03]/20"
            placeholder="Company or brand name"
          />
        </div>

        {/* Email */}
        <div>
          <label for="ws-email" class="block font-[family-name:var(--font-ui)] text-[12px] font-semibold uppercase tracking-[0.1em] text-[#333]">
            Email <span class="text-[#A18500]">*</span>
          </label>
          <input
            type="email"
            id="ws-email"
            name="email"
            required
            class="mt-2 w-full rounded-[3px] border border-[#D6E8D3] bg-white px-4 py-3 font-[family-name:var(--font-ui)] text-[14px] text-[#333] outline-none transition-colors focus:border-[#206D03] focus:ring-1 focus:ring-[#206D03]/20"
            placeholder="you@company.com"
          />
        </div>

        {/* Phone */}
        <div>
          <label for="ws-phone" class="block font-[family-name:var(--font-ui)] text-[12px] font-semibold uppercase tracking-[0.1em] text-[#333]">
            Phone <span class="text-[#A18500]">*</span>
          </label>
          <input
            type="tel"
            id="ws-phone"
            name="phone"
            required
            class="mt-2 w-full rounded-[3px] border border-[#D6E8D3] bg-white px-4 py-3 font-[family-name:var(--font-ui)] text-[14px] text-[#333] outline-none transition-colors focus:border-[#206D03] focus:ring-1 focus:ring-[#206D03]/20"
            placeholder="+1 (555) 000-0000"
          />
        </div>

        {/* Country */}
        <div>
          <label for="ws-country" class="block font-[family-name:var(--font-ui)] text-[12px] font-semibold uppercase tracking-[0.1em] text-[#333]">
            Country <span class="text-[#A18500]">*</span>
          </label>
          <input
            type="text"
            id="ws-country"
            name="country"
            required
            class="mt-2 w-full rounded-[3px] border border-[#D6E8D3] bg-white px-4 py-3 font-[family-name:var(--font-ui)] text-[14px] text-[#333] outline-none transition-colors focus:border-[#206D03] focus:ring-1 focus:ring-[#206D03]/20"
            placeholder="Destination country"
          />
        </div>

        {/* Message */}
        <div>
          <label for="ws-message" class="block font-[family-name:var(--font-ui)] text-[12px] font-semibold uppercase tracking-[0.1em] text-[#333]">
            Message <span class="text-[#A18500]">*</span>
          </label>
          <textarea
            id="ws-message"
            name="message"
            required
            rows={6}
            class="mt-2 w-full resize-y rounded-[3px] border border-[#D6E8D3] bg-white px-4 py-3 font-[family-name:var(--font-ui)] text-[14px] text-[#333] outline-none transition-colors focus:border-[#206D03] focus:ring-1 focus:ring-[#206D03]/20"
            placeholder="Products of interest, approximate volumes, packaging needs, timeline, and any specific documentation requirements."
          ></textarea>
        </div>

        {/* Submit */}
        <button
          type="submit"
          class="w-full rounded-[3px] bg-[#F3C00D] px-8 py-3.5 font-[family-name:var(--font-ui)] text-[13px] font-semibold tracking-wide text-[#333] transition-all duration-300 hover:bg-[#F3C00D]/90 hover:shadow-lg hover:shadow-[#F3C00D]/20"
        >
          Submit Wholesale Inquiry
        </button>
      </form>
    </div>
  </section>

  {/* ═══════════════════════════════════════════════════════════════
      CONTACT INFO — Bottom section with email + WhatsApp
  ═══════════════════════════════════════════════════════════════ */}
  <section class="grain relative overflow-hidden bg-[#1a1a1a] py-24">
    <div class="relative z-10 mx-auto max-w-3xl px-6 text-center lg:px-12">
      <p class="font-[family-name:var(--font-heading)] text-[11px] font-normal uppercase tracking-[0.35em] text-[#F3C00D]/80">
        Ready to Partner?
      </p>
