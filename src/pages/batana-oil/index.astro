---
/**
 * BATANA OIL — Catalog Landing Page (Full Redesign)
 * Editorial documentary experience: National Geographic × premium beauty × ethnobotanical journal.
 * 13 sections. 7 authentic origin photos. Hard authority data. Miskito partnership narrative.
 */
import BaseLayout from "../../layouts/BaseLayout.astro";
import Head from "../../components/Head.astro";
import Breadcrumb from "../../components/Breadcrumb.astro";
import Hero from "../../components/Hero.astro";
import SectionHeader from "../../components/SectionHeader.astro";
import BotanicalSection from "../../components/BotanicalSection.astro";
import OriginChapter from "../../components/OriginChapter.astro";
import SplitEditorial from "../../components/SplitEditorial.astro";
import PullQuote from "../../components/PullQuote.astro";
import AudienceWholesaleSplit from "../../components/AudienceWholesaleSplit.astro";
import CollectionNav from "../../components/CollectionNav.astro";
import TrustMarquee from "../../components/TrustMarquee.astro";
import ImpactBarIsland from "../../components/islands/ImpactBarIsland";
import BatanaBenefitsIsland from "../../components/islands/BatanaBenefitsIsland";
import { getEntry } from "astro:content";

const page = await getEntry("pages", "batana-oil");
if (!page) throw new Error("Missing content: pages/batana-oil");
const { data } = page;

import mediaFile from "../../data/jsonld/products/media.json";

const CDN = "https://cdn.forestal-mt.com";
const mediaMap = new Map(mediaFile.products.map((m) => [m.handler, m.image.url]));

const products = [
  {
    name: "Raw Batana Oil",
    tag: "Pure & Unrefined",
    sku: "FMT-BO-RBO",
    handler: "raw-batana-oil",
    description:
      "100% Elaeis oleifera kernel oil sourced directly from La Mosquitia. The same unrefined oil the Miskito people have trusted for centuries.",
  },
  {
    name: "Hair Wash",
    tag: "Gentle & Nourishing",
    sku: "FMT-BO-SH",
    handler: "batana-oil-hair-wash",
    description:
      "A gentle cleansing formula enriched with Batana Oil to support softness, moisture retention, and balanced scalp care.",
  },
  {
    name: "Conditioner",
    tag: "Restorative & Smoothing",
    sku: "FMT-BO-CO",
    handler: "batana-oil-hair-conditioner",
    description:
      "A restorative conditioner built around Batana Oil for detangling, shine, fiber resilience, and lasting moisture balance.",
  },
  {
    name: "Soap Bar",
    tag: "Concentrated & Artisanal",
    sku: "FMT-BO-SB",
    handler: "batana-oil-true-soap-bar",
    description:
      "Handcrafted in La Mosquitia using a traditional Miskito recipe. Concentrated soap bringing the nourishing qualities of Batana Oil to daily care.",
  },
];

const benefitCategories = [
  {
    label: "Hair",
    items: [
      "Supports the appearance of stronger, healthier hair",
      "Helps reduce breakage and dryness",
      "Encourages softness, shine, and moisture retention",
      "Promotes scalp comfort and nourishment",
      "Helps protect against sun, heat, and environmental stressors",
    ],
  },
  {
    label: "Skin",
    items: [
      "Deep, lasting hydration that feels natural",
      "Supports renewal with beta-carotene",
      "Helps improve the look of uneven skin tone",
      "Vitamin E contributes to protection and resilience",
      "Helps restore the skin's natural lipid barrier",
    ],
  },
  {
    label: "Beard",
    items: [
      "Softens coarse facial hair",
      "Helps reduce dryness and flaking beneath the beard",
      "Enhances grooming, smoothness, and manageability",
    ],
  },
];

const comparison = [
  {
    oil: "Batana Oil",
    feel: "Rich",
    dots: 3,
    best: "Deep nourishment and moisture",
    works: "Curly, coily, dry, or damaged hair",
    highlight: true,
  },
  {
    oil: "Argan Oil",
    feel: "Medium",
    dots: 2,
    best: "Shine and softness",
    works: "Hair needing lightweight moisture",
    highlight: false,
  },
  {
    oil: "Coconut Oil",
    feel: "Medium",
    dots: 2,
    best: "Moisture sealing",
    works: "Dry hair and skin routines",
    highlight: false,
  },
  {
    oil: "Jojoba Oil",
    feel: "Light",
    dots: 1,
    best: "Scalp balance support",
    works: "Oily scalp, sensitive skin routines",
    highlight: false,
  },
];

const processes = [
  {
    title: "Traditional Miskito Processing",
    tag: "Ancestral Method",
    image: `${CDN}/pages/batana-oil/batana-miracle-oil.jpg`,
    imageAlt:
      "Hand plunged into dark batana oil in a burlap-lined barrel — traditional Miskito processing",
    description:
      "Slow heat and natural separation produce a warm, aromatic oil with the deep restorative character the Miskito have valued for generations. Batana Oil in its most culturally authentic form.",
  },
  {
    title: "Cold-Pressed Extraction",
    tag: "Modern Precision",
    image: `${CDN}/pages/batana-oil/elaeis-oleifera-batana-oil.jpg`,
    imageAlt:
      "Raw batana paste and concentrate separating in a blue barrel — cold-pressed extraction",
    description:
      "A solvent-free approach that preserves the oil's natural nutrients while delivering a clean, consistent profile — ideal for cosmetic and wellness formulations.",
  },
];

const audience = [
  "First-time entrepreneurs launching their own brand",
  "Premium hair care and beauty brands",
  "Barbershops and grooming studios",
  "Natural cosmetics and clean beauty formulators",
  "International distributors and wholesalers",
  "Private label and OEM partners",
  "Direct consumers seeking the authentic Miskito miracle oil",
];

const origin = {
  location: "La Mosquitia rainforest, Honduras",
  source: "American oil palm (Elaeis oleifera)",
  heritage: "Miskito indigenous tradition",
  uses: "Hair restoration, skin nourishment, beard care",
};

const originMetadata = Object.entries(origin).map(([key, value]) => ({
  label: key.replace(/([A-Z])/g, " $1").trim(),
  value,
}));

const authorityStats = [
  { target: 65, suffix: "K+", label: "Annual Capacity (kg)" },
  { target: 48, prefix: "<", suffix: "h", label: "Order to Dispatch" },
  { target: 7, suffix: " days", label: "Worldwide Delivery" },
  { target: 4, label: "Handcrafted Products" },
];
---

<BaseLayout>
  <Head
    slot="head"
    title={data.title}
    description={data.description}
    canonicalUrl={data.canonicalUrl}
    pageName={data.pageName}
    og={data.og}
    twitter={data.twitter}
    schemas={data.schemas}
  />

  {
    /* ═══════════════════════════════════════════════════════════════
      1. HERO — Video background, cinematic
    ═══════════════════════════════════════════════════════════════ */
  }
  <Hero
    background={data.hero.background}
    catalogAccent="batana"
    eyebrow={data.hero.eyebrow}
    title={data.hero.title}
    subtitle={data.hero.subtitle}
    description={data.hero.body ?? data.hero.description}
    ctas={data.hero.ctas}
  />

  {/* 2. BREADCRUMB */}
  <Breadcrumb pageName={data.pageName} />

  {
    /* ═══════════════════════════════════════════════════════════════
      3. IMMERSIVE BOTANICAL INTRO — Full-bleed photographic section
    ═══════════════════════════════════════════════════════════════ */
  }
  <BotanicalSection
    image={`${CDN}/pages/batana-oil/batana-kernels-palm-nuts.jpg`}
    alt="Hands holding Elaeis oleifera fruit cluster with lush forest canopy backdrop — Forestal MT batana oil origin"
    overlay="from-charcoal/90 via-charcoal/70 to-charcoal/80"
  >
    <div class="mx-auto max-w-3xl px-6 text-center lg:px-12">
      <p
        class="font-[family-name:var(--font-heading)] text-[11px] font-normal uppercase tracking-[0.35em] text-[#F3C00D]/80"
      >
        The Collection
      </p>
      <h2
        class="mt-4 font-[family-name:var(--font-display)] text-[clamp(2rem,4vw,3rem)] font-normal text-white"
      >
        The Batana Oil Collection
      </h2>
      <hr class="gold-rule" />
      <p class="mt-8 font-[family-name:var(--font-body)] text-[15px] leading-[1.9] text-white/65">
        For generations, the Miskito people of La Mosquitia have been known for their striking,
        healthy hair. Their secret lives in the rainforest — in the fruit of the American Palm,
        transformed into a deeply restorative oil through techniques handed down for as long as
        anyone can remember.
      </p>
      <p class="mt-4 font-[family-name:var(--font-body)] text-[15px] leading-[1.9] text-white/65">
        Every batch begins with wild-harvested palm nuts gathered by Miskito harvesters who know
        these trees intimately. From harvest to finished product, we protect what makes this oil
        extraordinary: a true place, a true practice, and a true origin you can trace.
      </p>
    </div>
  </BotanicalSection>

  {
    /* ═══════════════════════════════════════════════════════════════
      4. ORIGIN STORY — Fixed image + enhanced narrative
    ═══════════════════════════════════════════════════════════════ */
  }
  <OriginChapter
    eyebrow="A Tradition Worth Knowing"
    heading="Heritage Rooted<br />in the Rainforest"
    paragraphs={[
      "Batana Oil is more than an ingredient. It is a heritage carried forward — born from an intimate understanding of the rainforest, the rhythm of the palms, and the skilled hands of communities who have worked this craft for generations.",
      "We collaborate directly with Miskito harvesters who continue these sustainable wild-harvesting practices. No anonymous supply chains. No guesswork about where your oil comes from.",
    ]}
    image={{
      src: `${CDN}/pages/batana-oil/honduras-batana-oil.jpg`,
      alt: "Miskito hands processing batana oil in a burlap barrel with palm nut clusters in background — La Mosquitia, Honduras",
    }}
    metadata={originMetadata}
    catalogAccent="batana"
    direction="image-left"
  />

  {
    /* ═══════════════════════════════════════════════════════════════
      5. MISKITO PARTNERSHIP — SplitEditorial + PullQuote
    ═══════════════════════════════════════════════════════════════ */
  }
  <section class="surface-warm py-24">
    <SplitEditorial
      eyebrow="Direct from Source"
      heading="From the Rainforest,<br/>Not a Warehouse"
      paragraphs={[
        "We are not intermediaries, brokers, or traders. Forestal MT sources directly from Miskito communities in La Mosquitia — the birthplace of batana oil. Every kilogram is traceable to its origin.",
        "Our alliances with indigenous harvesters are built on fair prices, long-term partnerships, and shared responsibility. When you buy from us, the value reaches the hands that made it.",
      ]}
      image={`${CDN}/pages/batana-oil/batana-from-miskitos-partners.jpg`}
      imageAlt="Smiling Miskito woman on a boat holding two bottles of batana oil with river and mangroves behind her"
      direction="right"
      variant="light"
    />
  </section>

  <PullQuote
    quote="No anonymous supply chains. No middlemen. No guesswork about where your oil comes from. From the Miskito rainforest to your hands — that’s the only path it takes."
    variant="light"
  />

  {
    /* ═══════════════════════════════════════════════════════════════
      6. PROCESSING JOURNEY — Image-driven cards
    ═══════════════════════════════════════════════════════════════ */
  }
  <section class="surface-dark grain py-24">
    <div class="mx-auto max-w-7xl px-6 lg:px-12">
      <SectionHeader
        eyebrow="Two Methods, Both Honored"
        heading="From Palm to Oil"
        variant="dark"
        align="center"
      />

      <div class="stagger-children mt-16 grid grid-cols-1 gap-8 md:grid-cols-2">
        {
          processes.map((proc) => (
            <div class="process-image-card overflow-hidden rounded-[2px] border border-white/10 bg-white/[0.03] backdrop-blur-sm transition-colors duration-300">
              <div class="aspect-[4/3] overflow-hidden">
                <img
                  src={proc.image}
                  alt={proc.imageAlt}
                  class="h-full w-full object-cover"
                  loading="lazy"
                  decoding="async"
                />
              </div>
              <div class="border-l-[3px] border-[#F3C00D]/50 p-8">
                <span class="inline-block font-[family-name:var(--font-heading)] text-[10px] uppercase tracking-[0.25em] text-[#F3C00D]/70">
                  {proc.tag}
                </span>
                <h3 class="mt-3 font-[family-name:var(--font-display)] text-[1.25rem] font-normal text-white">
                  {proc.title}
                </h3>
                <p class="mt-3 font-[family-name:var(--font-body)] text-[14px] leading-[1.8] text-white/55">
                  {proc.description}
                </p>
              </div>
            </div>
          ))
        }
      </div>

      <p
        class="mt-10 text-center font-[family-name:var(--font-body)] text-[12px] italic text-white/30"
      >
        Forestal MT offers both methods — heritage-driven craftsmanship and refined purity. Each
        with authentic origin and full traceability.
      </p>
    </div>
  </section>

  {
    /* ═══════════════════════════════════════════════════════════════
      7. AUTHORITY STRIP — Animated counters
    ═══════════════════════════════════════════════════════════════ */
  }
  <section class="surface-dark grain py-24">
    <div class="mx-auto max-w-7xl px-6 lg:px-12">
      <div class="reveal-on-scroll text-center">
        <p
          class="font-[family-name:var(--font-heading)] text-[11px] font-normal uppercase tracking-[0.35em] text-[#F3C00D]/80"
        >
          Honduras&rsquo; Largest Batana Oil Supplier
        </p>
      </div>

      <div class="mt-12">
        <ImpactBarIsland stats={authorityStats} client:visible />
      </div>

      <p
        class="mt-12 text-center font-[family-name:var(--font-body)] text-[14px] italic text-white/40"
      >
        From La Mosquitia to every continent. Dispatched in hours, delivered in days.
      </p>
    </div>
  </section>

  {
    /* ═══════════════════════════════════════════════════════════════
      8. PRODUCT SHOWCASE — Lifestyle banner + enhanced grid
    ═══════════════════════════════════════════════════════════════ */
  }
  <section class="surface-warm py-0">
    {/* Lifestyle banner */}
    <div class="lifestyle-banner relative">
      <div class="aspect-[21/9] overflow-hidden">
        <img
          src={`${CDN}/pages/batana-oil/batana-soap-products.jpg`}
          alt="Artisanal Batana Oil soap bars and hair care bottles with gold caps arranged on rustic wood"
          class="h-full w-full object-cover"
          loading="lazy"
          decoding="async"
        />
      </div>
      <div class="absolute inset-0 flex items-end px-8 pb-10 md:px-12">
        <p
          class="font-[family-name:var(--font-heading)] text-[11px] font-normal uppercase tracking-[0.35em] text-white/80"
        >
          Handcrafted by Miskito Artisans
        </p>
      </div>
    </div>

    <div class="py-16 pb-24">
      <div class="mx-auto max-w-7xl px-6 lg:px-12">
        <p
          class="reveal-on-scroll mx-auto max-w-3xl text-center font-[family-name:var(--font-body)] text-[15px] leading-[1.85] text-[#333]/65"
        >
          Every product in this collection is 100% natural, handcrafted by Miskito artisans using
          ancestral methods. As prepared at origin, so delivered to you — nothing added, nothing
          removed.
        </p>

        <div class="stagger-children mt-12 grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4">
          {
            products.map((product) => (
              <a
                href={`/products/${product.handler}/`}
                class="card-hover group block border-t-[3px] border-[#F3C00D]/50 bg-white shadow-[0_1px_3px_rgba(0,0,0,0.04)] transition-shadow duration-300 hover:shadow-md"
              >
                <div class="aspect-square overflow-hidden bg-[#F2F2F2] p-6">
                  <img
                    src={`/cdn-cgi/image/width=400,format=webp/${mediaMap.get(product.handler)}`}
                    alt={product.name}
                    width={400}
                    height={400}
                    class="h-full w-full object-contain transition-transform duration-300 group-hover:scale-105"
                    loading="lazy"
                  />
                </div>
                <div class="p-6">
                  <p class="font-[family-name:var(--font-heading)] text-[9px] font-normal uppercase tracking-[0.2em] text-[#A18500]">
                    {product.sku}
                  </p>
                  <h3 class="mt-2 font-[family-name:var(--font-heading)] text-[1rem] font-normal text-[#333]">
                    {product.name}
                  </h3>
                  <p class="mt-0.5 font-[family-name:var(--font-body)] text-[12px] italic text-[#333]/50">
                    {product.tag}
                  </p>
                  <p class="mt-3 font-[family-name:var(--font-body)] text-[13px] leading-[1.75] text-[#333]/60">
                    {product.description}
                  </p>
                  <p class="mt-4 font-[family-name:var(--font-ui)] text-[11px] font-semibold uppercase tracking-[0.15em] text-[#206D03] opacity-0 transition-opacity duration-200 group-hover:opacity-100">
                    View Product &rarr;
                  </p>
                </div>
              </a>
            ))
          }
        </div>
      </div>
    </div>
  </section>

  {
    /* ═══════════════════════════════════════════════════════════════
      9. BENEFITS — Interactive tabs (Preact island)
    ═══════════════════════════════════════════════════════════════ */
  }
  <section class="accent-batana py-24">
    <div class="mx-auto max-w-7xl px-6 lg:px-12">
      <div class="text-center">
        <p
          class="font-[family-name:var(--font-heading)] text-[11px] font-normal uppercase tracking-[0.35em] text-[#A18500]"
        >
          Naturally Rich in Essential Fatty Acids, Antioxidants &amp; Vitamin E
        </p>
        <h2
          class="mt-4 font-[family-name:var(--font-display)] text-[clamp(1.75rem,3.5vw,2.5rem)] font-normal text-[#333]"
        >
          What Batana Oil Does for You
        </h2>
        <hr class="gold-rule" />
      </div>

      <div class="mt-12">
        <BatanaBenefitsIsland
          categories={benefitCategories}
          disclaimer="These reflect traditional and cosmetic applications. Batana Oil is not a medical product and is not intended to diagnose, treat, cure, or prevent any disease."
          client:visible
        />
      </div>
    </div>
  </section>

  {
    /* ═══════════════════════════════════════════════════════════════
      10. OIL COMPARISON — Styled cards (pure CSS, no island)
    ═══════════════════════════════════════════════════════════════ */
  }
  <section class="surface-warm py-24">
    <div class="mx-auto max-w-5xl px-6 lg:px-12">
      <div class="reveal-on-scroll text-center">
        <p
          class="font-[family-name:var(--font-heading)] text-[11px] font-normal uppercase tracking-[0.35em] text-[#A18500]"
        >
          A Natural Choice for Every Hair Type
        </p>
        <h2
          class="mt-4 font-[family-name:var(--font-display)] text-[clamp(1.75rem,3.5vw,2.5rem)] font-normal text-[#333]"
        >
          How Batana Oil Compares
        </h2>
        <hr class="gold-rule" />
      </div>

      <div class="stagger-children mt-16 grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-4">
        {
          comparison.map((card) => (
            <div
              class:list={[
                "card-hover flex flex-col gap-4 border border-[#D6E8D3] p-6",
                card.highlight ? "comparison-card-highlight" : "bg-white",
              ]}
            >
              {card.highlight && (
                <span class="self-start rounded-[2px] bg-[#206D03] px-2 py-0.5 font-[family-name:var(--font-ui)] text-[9px] font-semibold uppercase tracking-[0.15em] text-white">
                  Our Pick
                </span>
              )}
              <h3
                class:list={[
                  "font-[family-name:var(--font-heading)] text-[1rem] font-normal",
                  card.highlight ? "text-[#206D03]" : "text-[#333]",
                ]}
              >
                {card.oil}
              </h3>
              <div class="flex gap-1">
                {Array.from({ length: 3 }).map((_, i) => (
                  <span
                    class:list={[
                      "h-2 w-2 rounded-full",
                      i < card.dots ? "bg-[#F3C00D]" : "bg-[#F3C00D]/20",
                    ]}
                    aria-hidden="true"
                  />
                ))}
                <span class="sr-only">Feel: {card.feel}</span>
              </div>
              <div>
                <p class="font-[family-name:var(--font-ui)] text-[10px] font-semibold uppercase tracking-[0.12em] text-[#A18500]">
                  Best For
                </p>
                <p class="mt-1 font-[family-name:var(--font-body)] text-[13px] text-[#333]/70">
                  {card.best}
                </p>
              </div>
              <div>
                <p class="font-[family-name:var(--font-ui)] text-[10px] font-semibold uppercase tracking-[0.12em] text-[#A18500]">
                  Works On
                </p>
                <p class="mt-1 font-[family-name:var(--font-body)] text-[13px] text-[#333]/70">
                  {card.works}
                </p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  {
    /* ═══════════════════════════════════════════════════════════════
      11. MARKET STATEMENT — Authenticity manifesto
    ═══════════════════════════════════════════════════════════════ */
  }
  <BotanicalSection
    image={`${CDN}/pages/batana-oil/batana-oil-bulk-shipping.jpg`}
    alt="Two large Forestal MT branded bulk shipping drums on pallets with blue sky behind — export-scale batana oil supply"
    overlay="from-charcoal/90 via-charcoal/70 to-charcoal/85"
  >
    <div class="reveal-on-scroll mx-auto max-w-4xl px-6 text-center lg:px-12">
      <p
        class="font-[family-name:var(--font-heading)] text-[11px] font-normal uppercase tracking-[0.35em] text-[#F3C00D]/80"
      >
        In a World of Imitations
      </p>
      <h2
        class="mt-6 font-[family-name:var(--font-display)] text-[clamp(1.75rem,4vw,2.75rem)] font-normal leading-[1.15] text-white"
      >
        In a Market Flooded with Adulterated,<br />Synthetic, and Fake Products &mdash;<br />We
        Stand for the Real Thing.
      </h2>
      <hr class="gold-rule" />
      <p
        class="mx-auto mt-8 max-w-2xl font-[family-name:var(--font-body)] text-[15px] leading-[1.85] text-white/55"
      >
        Authenticity. Traceability. Verifiable origin. That&rsquo;s what made us Honduras&rsquo; #1
        batana oil supplier. Not the cheapest — the most real.
      </p>

      <div class="mt-12 flex flex-wrap justify-center gap-3">
        {
          [
            "Verifiable Origin",
            "Anti-Counterfeit",
            "Clean Beauty",
            "Wild-Harvested",
            "Ancestral Ingredients",
            "Transparent Supply Chain",
          ].map((tag) => (
            <span class="tag-hover rounded-[2px] border border-white/10 px-4 py-2 font-[family-name:var(--font-ui)] text-[11px] text-white/40">
              {tag}
            </span>
          ))
        }
      </div>
    </div>
  </BotanicalSection>

  {
    /* ═══════════════════════════════════════════════════════════════
      12. AUDIENCE + WHOLESALE — Enhanced data
    ═══════════════════════════════════════════════════════════════ */
  }
  <AudienceWholesaleSplit
    audienceHeading="Built for Brands<br />That Value Origin"
    audienceItems={audience}
    wholesaleBody="From 1 unit to 65,000+ kilograms. Bulk ingredients, private label solutions, and worldwide distribution. Export-ready from Honduras — dispatched in under 48 hours."
  />

  {
    /* ═══════════════════════════════════════════════════════════════
      13. TRUST MARQUEE + COLLECTION NAV
    ═══════════════════════════════════════════════════════════════ */
  }
  <TrustMarquee variant="dark" />
  <CollectionNav exclude="batana-oil" />
</BaseLayout>
