---
/**
 * CollectionNav â€” Extracted collection navigation footer bar.
 * Replaces 5 identical implementations across catalog pages.
 */
interface Props {
  /** Links to show. Defaults to all 3 collections. */
  links?: { label: string; href: string }[];
  /** Current page slug to exclude from navigation */
  exclude?: string;
}

const allCollections = [
  { label: "Batana Oil", href: "/batana-oil/" },
  { label: "Stingless Bee Honey", href: "/stingless-bee-honey/" },
  { label: "Traditional Herbs", href: "/traditional-herbs/" },
  { label: "Wholesale", href: "/wholesale/" },
];

const { links, exclude } = Astro.props;
const navLinks = links ?? allCollections.filter((l) => !exclude || !l.href.includes(exclude));
---

<section class="border-t border-mint bg-white py-16">
  <div class="mx-auto max-w-7xl px-6 lg:px-12">
    <p
      class="text-center font-[family-name:var(--font-heading)] text-[11px] font-normal uppercase tracking-[0.35em] text-gold-dark"
    >
      Explore Our Other Collections
    </p>
    <div class="mt-8 flex flex-col items-center justify-center gap-6 sm:flex-row sm:gap-12">
      {
        navLinks.map((link, i) => (
          <>
            {i > 0 && <span class="hidden text-mint sm:inline">|</span>}
            <a
              href={link.href}
              class="group flex items-center gap-3 font-[family-name:var(--font-display)] text-[1.1rem] text-charcoal transition-colors hover:text-leaf-green"
            >
              {link.label}
              <svg
                class="h-3.5 w-3.5 transition-transform group-hover:translate-x-1"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                stroke-width="1.5"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3"
                />
              </svg>
            </a>
          </>
        ))
      }
    </div>
  </div>
</section>
