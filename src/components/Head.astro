---
import { buildPageGraph } from "../lib/jsonld";
import { cdnImage } from "../lib/image";

// SEO title/description → <title> and <meta name="description"> (search engine results)
// OG title/description → <meta property="og:*"> and <meta name="twitter:*"> (social sharing)
// Both come from frontmatter but are independent — SEO is the source of truth for the DOM.
// appendBrand: when true (default), appends "| Forestal MT" to <title>. Set false for PDPs
// where seoTitle in seo.json is already the complete, optimized title (max 60 chars).
interface Props {
  title: string;
  description: string;
  canonicalUrl: string;
  pageName: string;
  appendBrand?: boolean;
  og: {
    title: string;
    description: string;
    image: {
      url: string;
      alt: string;
      width: number;
      height: number;
    };
    video?: {
      url: string;
      secureUrl?: string;
      type?: string;
      width?: number;
      height?: number;
    };
  };
  twitter: {
    card: string;
  };
  schemas: Array<{
    type: string;
    id: string;
    mode?: string;
  }>;
  preloadHints?: Array<{
    href: string;
    as: "image" | "video" | "font" | "script" | "style";
    type?: string;
    crossorigin?: boolean;
    fetchpriority?: "high" | "low" | "auto";
  }>;
  robots?: string;
}

const {
  title,
  description,
  canonicalUrl,
  pageName,
  appendBrand = true,
  og,
  twitter,
  schemas,
  preloadHints = [],
  robots = "index, follow",
} = Astro.props;

// OG images are 1200x630 — serve through CDN for format negotiation
const ogImageUrl = cdnImage(og.image.url, { w: 1200, h: 630, fit: "cover" });

const jsonLdString = buildPageGraph(schemas, {
  pageName,
  canonicalUrl,
  description,
  ogImage: og.image,
});
---

<meta charset="utf-8" />

<!-- Early connection hints — reduce handshake latency for critical third-party origins -->
<link rel="preconnect" href="https://o4510832064593920.ingest.us.sentry.io" crossorigin />
<link rel="preconnect" href="https://stats.g.doubleclick.net" />
<link rel="preconnect" href="https://cloudflareinsights.com" />
<link rel="dns-prefetch" href="https://customer-8w5s9dekjdinwesc.cloudflarestream.com" />

{
  preloadHints.map((hint) => (
    <link
      rel="preload"
      href={hint.href}
      as={hint.as}
      type={hint.type}
      crossorigin={hint.crossorigin ? "" : undefined}
      fetchpriority={hint.fetchpriority}
    />
  ))
}

<meta name="viewport" content="width=device-width, initial-scale=1" />
<meta name="robots" content={robots} />

<title>{appendBrand ? `${title} | Forestal MT` : title}</title>
<meta name="description" content={description} />
<link rel="canonical" href={canonicalUrl} />

<!-- Favicons -->
<link rel="icon" href="/favicon.ico" sizes="48x48" />
<link rel="icon" href="/favicon.svg" type="image/svg+xml" />
<link rel="icon" href="/favicon-32x32.png" type="image/png" sizes="32x32" />
<link rel="icon" href="/favicon-16x16.png" type="image/png" sizes="16x16" />
<link rel="apple-touch-icon" href="/apple-touch-icon.png" />
<link rel="manifest" href="/manifest.webmanifest" />
<link rel="sitemap" type="application/xml" href="/fmt-sitemap-index.xml" />
<meta name="application-name" content="Forestal MT" />
<meta name="apple-mobile-web-app-title" content="Forestal MT" />
<meta name="apple-mobile-web-app-status-bar-style" content="default" />
<meta name="msapplication-config" content="/browserconfig.xml" />
<link rel="mask-icon" href="/safari-pinned-tab.svg" color="#206D03" />
<meta name="msapplication-TileColor" content="#206D03" />
<meta name="theme-color" content="#206D03" />

<!-- Open Graph -->
<meta property="og:type" content="website" />
<meta property="og:title" content={og.title} />
<meta property="og:description" content={og.description} />
<meta property="og:image" content={ogImageUrl} />
<meta property="og:image:alt" content={og.image.alt} />
<meta property="og:image:width" content={String(og.image.width)} />
<meta property="og:image:height" content={String(og.image.height)} />
<meta property="og:url" content={canonicalUrl} />
<meta property="og:site_name" content="Forestal MT | Honduras" />
<meta property="og:locale" content="en_US" />
{
  og.video && (
    <>
      <meta property="og:video" content={og.video.url} />
      <meta property="og:video:secure_url" content={og.video.secureUrl ?? og.video.url} />
      <meta property="og:video:type" content={og.video.type ?? "application/x-mpegURL"} />
      {og.video.width && <meta property="og:video:width" content={String(og.video.width)} />}
      {og.video.height && <meta property="og:video:height" content={String(og.video.height)} />}
    </>
  )
}

<!-- Twitter -->
<meta name="twitter:card" content={twitter.card} />
<meta name="twitter:title" content={og.title} />
<meta name="twitter:description" content={og.description} />
<meta name="twitter:image" content={ogImageUrl} />
<meta name="twitter:image:alt" content={og.image.alt} />

<!-- JSON-LD Structured Data -->
{jsonLdString && <script is:inline type="application/ld+json" set:html={jsonLdString} />}
