---
/**
 * DarkFrostedCard â€” Extracted frosted-glass card for dark sections.
 * Hover: border brightens, bg shifts. Gold accent.
 */
interface Props {
  number?: string;
  eyebrow?: string;
  heading: string;
  body: string;
}

const { number, eyebrow, heading, body } = Astro.props;
---

<div class="border border-white/10 bg-white/[0.03] p-8 backdrop-blur-sm frosted-hover">
  {number && (
    <span class="font-[family-name:var(--font-heading)] text-[13px] text-[#F3C00D]/40">
      {number}
    </span>
  )}
  {eyebrow && (
    <p class="font-[family-name:var(--font-heading)] text-[9px] font-normal uppercase tracking-[0.3em] text-[#F3C00D]/60">
      {eyebrow}
    </p>
  )}
  <h3 class:list={[
    "font-[family-name:var(--font-heading)] text-[1.05rem] font-normal tracking-wide text-white",
    number || eyebrow ? 'mt-2' : '',
  ]}>
    {heading}
  </h3>
  <div class="mt-3 h-px w-8 bg-[#F3C00D]/20"></div>
  <p class="mt-4 font-[family-name:var(--font-body)] text-[13px] leading-[1.85] text-white/50">
    {body}
  </p>
  <slot />
</div>
