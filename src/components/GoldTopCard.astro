---
/**
 * GoldTopCard â€” Extracted gold-top-border card used across 6 pages.
 * Includes hover micro-interaction (lift + shadow bloom).
 */
interface Props {
  number?: string;
  eyebrow?: string;
  heading: string;
  body: string;
  size?: 'sm' | 'md' | 'lg';
}

const { number, eyebrow, heading, body, size = 'md' } = Astro.props;

const padding = {
  sm: 'p-6',
  md: 'p-8',
  lg: 'p-10',
}[size];
---

<div class:list={[
  "border-t-[3px] border-[#F3C00D]/50 bg-white shadow-[0_1px_3px_rgba(0,0,0,0.04)] card-hover",
  padding,
]}>
  {number && (
    <span class="font-[family-name:var(--font-heading)] text-[13px] text-[#F3C00D]/40">
      {number}
    </span>
  )}
  {eyebrow && (
    <p class="font-[family-name:var(--font-heading)] text-[9px] font-normal uppercase tracking-[0.3em] text-gold-dark">
      {eyebrow}
    </p>
  )}
  <h3 class:list={[
    "font-[family-name:var(--font-heading)] text-[1.05rem] font-normal text-charcoal",
    number || eyebrow ? 'mt-2' : '',
  ]}>
    {heading}
  </h3>
  <div class="mt-3 h-px w-8 bg-[#F3C00D]/30"></div>
  <p class="mt-4 font-[family-name:var(--font-body)] text-[13px] leading-[1.85] text-charcoal/60">
    {body}
  </p>
  <slot />
</div>
