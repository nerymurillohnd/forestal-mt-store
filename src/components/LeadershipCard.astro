---
/**
 * LeadershipCard â€” Compact badge card: name + title, no photo.
 */
interface Props {
  name: string;
  title: string;
  bio?: string;
}

const { name, title, bio } = Astro.props;

// Initials from name (first + last word)
const parts = name.trim().split(" ");
const initials = parts.length >= 2 ? parts[0][0] + parts[parts.length - 1][0] : parts[0][0];
---

<div class="card-hover border-t-[3px] border-gold/50 bg-white shadow-[0_1px_3px_rgba(0,0,0,0.04)]">
  <div class="p-6">
    {/* Initials circle */}
    <div class="mb-4 flex h-10 w-10 items-center justify-center rounded-full bg-gold/10">
      <span
        class="font-[family-name:var(--font-heading)] text-[0.85rem] font-normal text-gold-dark"
      >
        {initials}
      </span>
    </div>

    <h3
      class="font-[family-name:var(--font-heading)] text-[0.95rem] font-normal leading-snug text-charcoal"
    >
      {name}
    </h3>
    <p
      class="mt-1.5 font-[family-name:var(--font-ui)] text-[10px] font-semibold uppercase tracking-[0.15em] text-gold-dark"
    >
      {title}
    </p>

    {
      bio && (
        <>
          <div class="mt-3 h-px w-6 bg-gold/30" />
          <p class="mt-3 font-[family-name:var(--font-body)] text-[12.5px] leading-[1.8] text-charcoal/55">
            {bio}
          </p>
        </>
      )
    }
  </div>
</div>
