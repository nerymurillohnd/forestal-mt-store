---
/**
 * SectionHeader â€” Extracted eyebrow + heading + gold-rule block
 * Replaces 30+ copy-pasted instances across all pages.
 */
interface Props {
  eyebrow: string;
  heading: string;
  variant?: "light" | "dark" | "green";
  align?: "center" | "left";
}

const { eyebrow, heading, variant = "light", align = "center" } = Astro.props;

const eyebrowColor = {
  light: "text-gold-dark",
  dark: "text-gold/80",
  green: "text-gold/80",
}[variant];

const headingColor = {
  light: "text-charcoal",
  dark: "text-white",
  green: "text-white",
}[variant];

const alignClass = align === "center" ? "text-center" : "text-left";
const ruleClass = align === "center" ? "gold-rule" : "gold-rule-left";
---

<div class:list={[alignClass, "reveal-on-scroll"]}>
  <p
    class:list={[
      "font-[family-name:var(--font-heading)] text-[11px] font-normal uppercase tracking-[0.35em]",
      eyebrowColor,
    ]}
  >
    {eyebrow}
  </p>
  <h2
    class:list={[
      "mt-4 font-[family-name:var(--font-display)] text-[clamp(1.75rem,3.5vw,2.5rem)] font-normal",
      headingColor,
    ]}
    set:html={heading}
  />
  <hr class={ruleClass} />
</div>
